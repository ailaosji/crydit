  <script define:vars={{ featuredCards }}>
    // 配置
    const itemsPerPage = 10;
    let currentPage = 1;
    const allCards = featuredCards;
    const totalPages = Math.ceil(allCards.length / itemsPerPage);

    // 随机生成评论数（模拟数据）
    function getCommentCount(cardSlug) {
      let hash = 0;
      for (let i = 0; i < cardSlug.length; i++) {
        hash = ((hash << 5) - hash) + cardSlug.charCodeAt(i);
        hash = hash & hash;
      }
      return Math.abs(hash % 50) + 5;
    }

    // 获取卡片类型样式
    function getCardTypeDisplay(cardType) {
      const types = {
        'visa': 'bg-blue-100 text-blue-800',
        'mastercard': 'bg-orange-100 text-orange-800',
        'unionpay': 'bg-red-100 text-red-800'
      };
      const className = types[cardType] || 'bg-gray-100 text-gray-800';
      const text = cardType ? cardType.toUpperCase() : '其他';
      return '<span class="px-2 py-1 text-xs font-medium rounded-full ' + className + '">' + text + '</span>';
    }

    // 生成勾选或叉号图标
    function getCheckIcon(isActive) {
      if (isActive) {
        return '<span class="text-green-600 text-lg">✓</span>';
      } else {
        return '<span class="text-gray-400 text-lg">✗</span>';
      }
    }

    // 生成勾选或叉号图标
    function getCheckIcon(isActive) {
      if (isActive) {
        return '<span class="text-green-600 text-lg">✓</span>';
      } else {
        return '<span class="text-gray-400 text-lg">✗</span>';
      }
    }

    // 渲染表格行
    function renderTableRow(card, index) {
      const rank = index + 1;
      const commentCount = getCommentCount(card.slug);
      
      let row = '<tr class="hover:bg-gray-50 transition-colors">';
      
      // 第一列：排名和卡片信息
      row += '<td class="px-4 py-4">';
      row += '<div class="flex items-center">';
      row += '<div class="flex-shrink-0 w-8 h-8 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold text-sm">';
      row += rank;
      row += '</div>';
      row += '<div class="ml-3">';
      row += '<a href="/cards/' + card.slug + '" class="text-sm font-medium text-gray-900 hover:text-indigo-600 transition-colors cursor-pointer block">';
      row += card.data.name;
      row += '</a>';
      row += '<div class="text-xs text-gray-500 line-clamp-2 mt-1">' + (card.data.shortDescription || card.data.description || '') + '</div>';
      row += '</div>';
      row += '</div>';
      row += '</td>';
      
      // 卡片类型
      row += '<td class="px-2 py-4 text-center">';
      row += getCardTypeDisplay(card.data.cardType);
      row += '</td>';
      
      // 虚拟卡
      row += '<td class="px-2 py-4 text-center">';
      row += getCheckIcon(card.data.isVirtual);
      row += '</td>';
      
      // 实体卡
      row += '<td class="px-2 py-4 text-center">';
      row += getCheckIcon(card.data.isPhysical);
      row += '</td>';
      
      // 充值费
      row += '<td class="px-2 py-4 text-center">';
      row += '<span class="text-xs text-gray-900">' + (card.data.depositFee || '免费') + '</span>';
      row += '</td>';
      
      // 兑换费
      row += '<td class="px-2 py-4 text-center">';
      row += '<span class="text-xs text-gray-900">' + (card.data.exchangeFee || '0.5%') + '</span>';
      row += '</td>';
      
      // 交易费
      row += '<td class="px-2 py-4 text-center">';
      row += '<span class="text-xs text-gray-900">' + (card.data.transactionFee || '1.5%') + '</span>';
      row += '</td>';
      
      // 提现费
      row += '<td class="px-2 py-4 text-center">';
      row += '<span class="text-xs text-gray-900">' + (card.data.withdrawalFee || '2%') + '</span>';
      row += '</td>';
      
      // 年费
      row += '<td class="px-2 py-4 text-center">';
      if (card.data.annualFee === false) {
        row += '<span class="px-2 py-0.5 text-xs font-medium rounded-full bg-green-100 text-green-800">免费</span>';
      } else {
        row += '<span class="px-2 py-0.5 text-xs font-medium rounded-full bg-red-100 text-red-800">收费</span>';
      }
      row += '</td>';
      
      // 评论数
      row += '<td class="px-2 py-4 text-center">';
      row += '<a href="/cards/' + card.slug + '#comments" class="inline-flex items-center justify-center hover:text-indigo-600 transition-colors cursor-pointer">';
      row += '<svg class="w-3 h-3 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">';
      row += '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>';
      row += '</svg>';
      row += '<span class="text-xs font-medium text-gray-700">' + commentCount + '</span>';
      row += '</a>';
      row += '</td>';
      
      // 操作按钮
      row += '<td class="px-2 py-4 text-center">';
      row += '<a href="/cards/' + card.slug + '" class="inline-flex items-center px-3 py-1.5 bg-gradient-to-r from-green-500 to-green-600 text-white text-xs font-medium rounded-lg hover:from-green-600 hover:to-green-700 transition-all transform hover:scale-105 shadow-sm">';
      row += '立即申请';
      row += '</a>';
      row += '</td>';
      
      row += '</tr>';
      return row;
    }

    // 渲染表格
    function renderTable() {
      const startIndex = (currentPage - 1) * itemsPerPage;
      const endIndex = Math.min(startIndex + itemsPerPage, allCards.length);
      const pageCards = allCards.slice(startIndex, endIndex);
      
      const tableBody = document.getElementById('card-table-body');
      if (tableBody) {
        let tableHtml = '';
        for (let i = 0; i < pageCards.length; i++) {
          tableHtml += renderTableRow(pageCards[i], startIndex + i);
        }
        tableBody.innerHTML = tableHtml;
      }
      
      // 更新分页信息
      const pageStartEl = document.getElementById('page-start');
      const pageEndEl = document.getElementById('page-end');
      const totalItemsEl = document.getElementById('total-items');
      
      if (pageStartEl) pageStartEl.textContent = startIndex + 1;
      if (pageEndEl) pageEndEl.textContent = endIndex;
      if (totalItemsEl) totalItemsEl.textContent = allCards.length;
      
      // 更新分页按钮状态
      const prevBtn = document.getElementById('prev-page');
      const nextBtn = document.getElementById('next-page');
      
      if (prevBtn) prevBtn.disabled = currentPage === 1;
      if (nextBtn) nextBtn.disabled = currentPage === totalPages;
      
      // 渲染页码
      renderPageNumbers();
    }

    // 渲染页码
    function renderPageNumbers() {
      const pageNumbersContainer = document.getElementById('page-numbers');
      if (!pageNumbersContainer) return;
      
      let html = '';
      const maxVisiblePages = 5;
      let startPage = Math.max(1, currentPage - Math.floor(maxVisiblePages / 2));
      let endPage = Math.min(totalPages, startPage + maxVisiblePages - 1);
      
      if (endPage - startPage < maxVisiblePages - 1) {
        startPage = Math.max(1, endPage - maxVisiblePages + 1);
      }
      
      for (let i = startPage; i <= endPage; i++) {
        const activeClass = i === currentPage ? 'bg-indigo-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-50';
        html += '<button class="px-3 py-1 text-sm font-medium ' + activeClass + ' border border-gray-300 rounded-md transition-colors" data-page="' + i + '">';
        html += i;
        html += '</button>';
      }
      
      pageNumbersContainer.innerHTML = html;
      
      // 添加页码点击事件
      const pageButtons = pageNumbersContainer.querySelectorAll('button');
      for (let i = 0; i < pageButtons.length; i++) {
        pageButtons[i].addEventListener('click', function() {
          currentPage = parseInt(this.dataset.page);
          renderTable();
        });
      }
    }

    // 初始化事件监听器
    document.addEventListener('DOMContentLoaded', function() {
      renderTable();
      
      // 上一页按钮
      const prevBtn = document.getElementById('prev-page');
      if (prevBtn) {
        prevBtn.addEventListener('click', function() {
          if (currentPage > 1) {
            currentPage--;
            renderTable();
          }
        });
      }
      
      // 下一页按钮
      const nextBtn = document.getElementById('next-page');
      if (nextBtn) {
        nextBtn.addEventListener('click', function() {
          if (currentPage < totalPages) {
            currentPage++;
            renderTable();
          }
        });
      }
    });
  </script>

