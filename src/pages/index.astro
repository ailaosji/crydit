---
import Layout from '../layouts/Layout.astro';
import CardTableContainer from '../components/CardTableContainer.tsx';
import { getCollection } from 'astro:content';

// 获取文章数据
const allArticles = await getCollection('articles');
const sortedArticles = allArticles
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());

// 获取最新文章（用于大图展示）
const featuredArticle = sortedArticles[0];

// 获取其他热门文章（用于右侧列表）
const recentArticles = sortedArticles.slice(1, 5);

// 文章分类配置
const categoryConfig = {
  news: { label: '新闻', color: 'bg-red-100 text-red-600' },
  guide: { label: '指南', color: 'bg-blue-100 text-blue-600' },
  review: { label: '评测', color: 'bg-green-100 text-green-600' },
  analysis: { label: '分析', color: 'bg-purple-100 text-purple-600' },
  tutorial: { label: '教程', color: 'bg-teal-100 text-teal-600' },
};
---

<Layout title="U卡评测网 - 最专业的数字货币卡片评测平台">
  <div class="min-h-screen bg-gradient-to-br from-slate-50 to-indigo-100">
    <!-- 优化后的 Hero Section -->
    <section
      class="relative overflow-hidden bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600"
    >
      <!-- 背景装饰元素 -->
      <div class="absolute inset-0">
        <div
          class="absolute left-0 top-0 h-72 w-72 -translate-x-36 -translate-y-36 animate-pulse rounded-full bg-white/10 blur-3xl"
        >
        </div>
        <div
          class="absolute bottom-0 right-0 h-96 w-96 translate-x-48 translate-y-48 animate-pulse rounded-full bg-purple-300/20 blur-3xl"
        >
        </div>
        <div
          class="absolute left-1/2 top-1/2 h-64 w-64 -translate-x-32 -translate-y-32 rounded-full bg-pink-300/10 blur-2xl"
        >
        </div>
      </div>
      <div class="relative mx-auto max-w-7xl px-6 lg:px-8">
        <div class="flex min-h-[50vh] py-16">
          <div class="flex flex-1 items-center justify-center">
            <div class="mx-auto max-w-4xl text-center"

      <!-- 网格背景 -->
      <div
        class="bg-[url('data:image/svg+xml,%3Csvg width= absolute inset-0"
        60"
        height="60"
        viewBox="0 0 60 60"
        xmlns="http://www.w3.org/2000/svg"
        %3E%3Cg
        fill="none"
        fill-rule="evenodd"
        %3E%3Cg
        fill="%239C92AC"
        fill-opacity="0.05"
        %3E%3Ccircle
        cx="30"
        cy="30"
        r="2"
        %3E%3C
        g%3E%3C
        g%3E%3C
        svg%3E')]
        opacity-20"
      >
      </div>

      <!-- 主要内容容器 -->
      <div class="relative mx-auto max-w-7xl px-6 lg:px-8">
        <div class="flex min-h-[50vh] py-16">
          <!-- 左侧浮动图标 -->
          <div class="hidden lg:block lg:w-1/4">
            <div class="relative h-full">
              <!-- Apple Pay -->
              <div
                class="absolute"
                style="top: 15%; left: 10%; animation: float-up-down 6s ease-in-out infinite;"
              >
                <div class="icon-card">
                  <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                    <path
                      d="M17.05 20.28c-.98.95-2.05.88-3.08.35-1.09-.54-2.08-.52-3.25 0-1.43.65-2.18.53-3.04-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"
                    ></path>
                  </svg>
                  <span class="icon-label">Apple Pay</span>
                </div>
              </div>

              <!-- Netflix -->
              <div
                class="absolute"
                style="top: 45%; left: 25%; animation: float-up-down 6s ease-in-out infinite; animation-delay: 1s;"
              >
                <div class="icon-card netflix">
                  <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M6.5 2v19.5c2.75.15 5.5.15 8.25 0V2M6.5 2L14.75 21.5"></path>
                  </svg>
                  <span class="icon-label">Netflix</span>
                </div>
              </div>

              <!-- Spotify -->
              <div
                class="absolute"
                style="top: 75%; left: 5%; animation: float-up-down 6s ease-in-out infinite; animation-delay: 2s;"
              >
                <div class="icon-card spotify">
                  <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                    <path
                      d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"
                    ></path>
                  </svg>
                  <span class="icon-label">Spotify</span>
                </div>
              </div>
            </div>
          </div>

          <!-- 中央主要内容 -->
          <div class="flex flex-1 items-center justify-center">
            <div class="mx-auto max-w-4xl text-center">
              <!-- 主标题 -->
              <div class="mb-8">
                <h1
                  class="mb-4 whitespace-nowrap text-4xl font-bold leading-tight text-white md:text-5xl lg:text-6xl"
                >
                  让数字货币<span
                    class="bg-gradient-to-r from-yellow-300 to-pink-300 bg-clip-text text-transparent"
                    >走进现实生活</span
                  >
                </h1>

                
                <p class="mx-auto mb-2 max-w-2xl text-lg text-white/90 md:text-xl">
                  数字货币U卡评测平台，好用的都在这。
                </p>
                <p class="text-sm text-white/70 md:text-base">专业测评 · 安全可靠 · 简单易用</p>
              </div>

              <!-- 支持的服务标签 -->
              <div class="flex flex-wrap justify-center gap-2">
                <span
                  class="rounded-full border border-white/20 bg-white/15 px-3 py-1.5 text-xs text-white/90 backdrop-blur-sm"
                >
                  Apple Pay
                </span>
                <span
                  class="rounded-full border border-white/20 bg-white/15 px-3 py-1.5 text-xs text-white/90 backdrop-blur-sm"
                >
                  Google Pay
                </span>
                <span
                  class="rounded-full border border-white/20 bg-white/15 px-3 py-1.5 text-xs text-white/90 backdrop-blur-sm"
                >
                  支付宝
                </span>
                <span
                  class="rounded-full border border-white/20 bg-white/15 px-3 py-1.5 text-xs text-white/90 backdrop-blur-sm"
                >
                  Netflix
                </span>
                <span
                  class="rounded-full border border-white/20 bg-white/15 px-3 py-1.5 text-xs text-white/90 backdrop-blur-sm"
                >
                  ChatGPT
                </span>
                <span
                  class="rounded-full border border-white/20 bg-white/15 px-3 py-1.5 text-xs text-white/90 backdrop-blur-sm"
                >
                  Steam
                </span>
              </div>
              
          <!-- 右侧浮动图标 -->
          <div class="hidden lg:block lg:w-1/4">
            <div class="relative h-full">
              <!-- Google Pay -->
              <div
                class="absolute"
                style="top: 20%; right: 15%; animation: float-up-down 6s ease-in-out infinite; animation-delay: 0.5s;"
              >
                <div class="icon-card">
                  <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                    <path
                      d="M12.48 10.92v3.28h7.84c-.24 1.84-.853 3.187-1.787 4.133-1.147 1.147-2.933 2.4-6.053 2.4-4.827 0-8.6-3.893-8.6-8.72s3.773-8.72 8.6-8.72c2.6 0 4.507 1.027 5.907 2.347l2.307-2.307C18.747 1.44 16.133 0 12.48 0 5.867 0 .307 5.387.307 12s5.56 12 12.173 12c3.573 0 6.267-1.173 8.373-3.36 2.16-2.16 2.84-5.213 2.84-7.667 0-.76-.053-1.467-.173-2.053H12.48z"
                    ></path>
                  </svg>
                  <span class="icon-label">Google Pay</span>
                </div>
              </div>

              <!-- ChatGPT -->
              <div
                class="absolute"
                style="top: 50%; right: 5%; animation: float-up-down 6s ease-in-out infinite; animation-delay: 1.5s;"
              >
                <div class="icon-card chatgpt">
                  <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                    <path
                      d="M22.282 9.821a5.985 5.985 0 0 0-.516-4.91 6.046 6.046 0 0 0-6.51-2.9A6.065 6.065 0 0 0 4.981 4.18a5.985 5.985 0 0 0-3.998 2.9 6.046 6.046 0 0 0 .743 7.097 5.98 5.98 0 0 0 .51 4.911 6.051 6.051 0 0 0 6.515 2.9A5.985 5.985 0 0 0 13.26 24a6.056 6.056 0 0 0 5.772-4.206 5.99 5.99 0 0 0 3.997-2.9 6.056 6.056 0 0 0-.747-7.073zM13.26 22.43a4.476 4.476 0 0 1-2.876-1.04l.141-.081 4.779-2.758a.795.795 0 0 0 .392-.681v-6.737l2.02 1.168a.071.071 0 0 1 .038.052v5.583a4.504 4.504 0 0 1-4.494 4.494zM3.6 18.304a4.47 4.47 0 0 1-.535-3.014l.142.085 4.783 2.759a.771.771 0 0 0 .78 0l5.843-3.369v2.332a.08.08 0 0 1-.033.062L9.74 19.95a4.5 4.5 0 0 1-6.14-1.646zM2.34 7.896a4.485 4.485 0 0 1 2.366-1.973V11.6a.766.766 0 0 0 .388.676l5.815 3.355-2.02 1.168a.076.076 0 0 1-.071 0l-4.83-2.786A4.504 4.504 0 0 1 2.34 7.872zm16.597 3.855l-5.833-3.387L15.119 7.2a.076.076 0 0 1 .071 0l4.83 2.791a4.494 4.494 0 0 1-.676 8.105v-5.678a.79.79 0 0 0-.407-.667zm2.01-3.023l-.141-.085-4.774-2.782a.776.776 0 0 0-.785 0L9.409 9.23V6.897a.066.066 0 0 1 .028-.061l4.83-2.787a4.5 4.5 0 0 1 6.68 4.66zm-12.64 4.135l-2.02-1.164a.08.08 0 0 1-.038-.057V6.075a4.5 4.5 0 0 1 7.375-3.453l-.142.08L8.704 5.46a.795.795 0 0 0-.393.681zm1.097-2.365l2.602-1.5 2.607 1.5v2.999l-2.597 1.5-2.607-1.5z"
                    ></path>
                  </svg>
                  <span class="icon-label">ChatGPT</span>
                </div>
              </div>

              <!-- YouTube -->
              <div
                class="absolute"
                style="top: 80%; right: 20%; animation: float-up-down 6s ease-in-out infinite; animation-delay: 2.5s;"
              >
                <div class="icon-card youtube">
                  <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                    <path
                      d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
                    ></path>
                  </svg>
                  <span class="icon-label">YouTube</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 最新资讯模块 -->
    <section class="py-16 bg-gradient-to-br from-gray-50 via-white to-indigo-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            最新资讯
          </h2>
          <p class="text-lg text-gray-600">
            了解数字货币卡片行业最新动态与深度评测
          </p>
        </div>

        {allArticles.length > 0 ? (
          <div class="grid lg:grid-cols-3 gap-8">
            {featuredArticle && (
              <div class="lg:col-span-2">
                <article class="group relative h-[450px] rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300">
                  <div
                    class="absolute inset-0 bg-cover bg-center"
                    style={`background-image: url('${featuredArticle.data.image || '/default-article-bg.jpg'}')`}
                  >
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
                  </div>
                  <div class="relative h-full flex flex-col justify-end p-8">
                    <div class="mb-4 flex items-center gap-3">
                      <span class="inline-flex items-center px-3 py-1 rounded-full bg-indigo-500 text-white text-xs font-medium">
                        精选
                      </span>
                      {featuredArticle.data.category && (
                        <span class={`px-3 py-1 rounded-full text-xs font-medium ${categoryConfig[featuredArticle.data.category]?.color || 'bg-gray-100 text-gray-600'}`}>
                          {categoryConfig[featuredArticle.data.category]?.label || '文章'}
                        </span>
                      )}
                    </div>
                    <h3 class="text-2xl lg:text-3xl font-bold text-white mb-3 group-hover:text-yellow-300 transition-colors">
                      <a href={`/articles/${featuredArticle.slug}`} class="hover:underline">
                        {featuredArticle.data.title}
                      </a>
                    </h3>
                    <p class="text-white/90 text-base mb-4 line-clamp-2">
                      {featuredArticle.data.description}
                    </p>
                  </div>
                </article>
              </div>
            )}
            <div class="lg:col-span-1">
              <div class="bg-white rounded-2xl shadow-lg p-6">
                <div class="flex items-center justify-between mb-6">
                  <h3 class="text-lg font-bold text-gray-900">近期文章</h3>
                  <a href="/articles" class="text-sm text-indigo-600 hover:text-indigo-700 font-medium">
                    查看全部 →
                  </a>
                </div>
                <div class="space-y-4">
                  {recentArticles.length > 0 ? (
                    recentArticles.map((article, index) => (
                      <article class="group" key={article.slug}>
                        <a href={`/articles/${article.slug}`} class="block">
                          <div class="flex gap-4 p-3 rounded-lg hover:bg-gray-50 transition-colors">
                            <div class="flex-1 min-w-0">
                              <h4 class="text-sm font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors line-clamp-2 mb-1">
                                {article.data.title}
                              </h4>
                              <div class="flex items-center gap-3 text-xs text-gray-500">
                                <span>{new Date(article.data.publishDate).toLocaleDateString('zh-CN')}</span>
                              </div>
                            </div>
                          </div>
                        </a>
                      </article>
                    ))
                  ) : (
                    <p class="text-gray-500 text-center py-8">暂无更多文章</p>
                  )}
                </div>
              </div>
            </div>
          </div>
        ) : (
          <div class="text-center py-12">
            <div class="max-w-md mx-auto">
              <h3 class="text-lg font-medium text-gray-900 mb-2">内容准备中</h3>
              <p class="text-gray-500">我们正在准备精彩的内容，敬请期待！</p>
            </div>
          </div>
        )}
      </div>
    </section>

    <!-- 推荐U卡部分 -->
    <section class="bg-white px-6 py-16 lg:px-8">
      <div class="mx-auto max-w-7xl">
        <div class="mb-12 text-center">
          <h2 class="mb-4 text-4xl font-bold text-gray-900">推荐U卡</h2>
          <p class="mx-auto max-w-3xl text-xl text-gray-600">
            精选市场上最优质的数字货币借记卡，助您轻松实现加密资产的日常消费
          </p>
        </div>
        <CardTableContainer client:load />
      </div>
    </section>
  </div>
</Layout>

  <!-- 添加样式 -->
  <style>
    /* 浮动图标动画 */
    @keyframes float-up-down {
      0%,
      100% {
        transform: translateY(0) rotate(0deg);
      }
      33% {
        transform: translateY(-15px) rotate(2deg);
      }
      66% {
        transform: translateY(-5px) rotate(-2deg);
      }
    }

    .icon-card {
      display: inline-flex;
      flex-direction: column;
      align-items: center;
      padding: 0.75rem;
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(15px);
      border-radius: 1rem;
      border: 1px solid rgba(255, 255, 255, 0.25);
      color: white;
      transition: all 0.4s ease;
      cursor: default;
      box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
    }

    .icon-card:hover {
      background: rgba(255, 255, 255, 0.25);
      transform: scale(1.05) translateY(-3px);
      box-shadow: 0 16px 32px rgba(31, 38, 135, 0.25);
    }

    .icon-label {
      margin-top: 0.375rem;
      font-size: 0.7rem;
      font-weight: 600;
      opacity: 0.95;
      letter-spacing: 0.025em;
    }

    /* 特定品牌颜色 */
    .icon-card.netflix:hover {
      background: linear-gradient(135deg, rgba(229, 9, 20, 0.3), rgba(229, 9, 20, 0.4));
      box-shadow: 0 20px 40px rgba(229, 9, 20, 0.3);
    }

    .icon-card.spotify:hover {
      background: linear-gradient(135deg, rgba(30, 215, 96, 0.3), rgba(30, 215, 96, 0.4));
      box-shadow: 0 20px 40px rgba(30, 215, 96, 0.3);
    }

    .icon-card.youtube:hover {
      background: linear-gradient(135deg, rgba(255, 0, 0, 0.3), rgba(255, 0, 0, 0.4));
      box-shadow: 0 20px 40px rgba(255, 0, 0, 0.3);
    }

    .icon-card.chatgpt:hover {
      background: linear-gradient(135deg, rgba(16, 163, 127, 0.3), rgba(16, 163, 127, 0.4));
      box-shadow: 0 20px 40px rgba(16, 163, 127, 0.3);
    }

    /* 表格样式优化 */
    tbody tr {
      animation: fadeIn 0.3s ease-out;
      transition: background-color 0.2s ease;
    }

    tbody tr:hover {
      background-color: rgba(249, 250, 251, 0.5);
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* 新增行加载动画 */
    .new-row {
      animation: slideInFromBottom 0.5s ease-out;
    }

    @keyframes slideInFromBottom {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .line-clamp-1 {
      display: -webkit-box;
      -webkit-line-clamp: 1;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    /* 响应式优化 */
    @media (max-width: 1024px) {
      .floating-icon {
        display: none;
      }
    }
  </style>
</Layout>
