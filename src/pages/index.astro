---
import Layout from '../layouts/Layout.astro';
import CardTableContainer from '../components/CardTableContainer.tsx';
import { getCollection } from 'astro:content';

// 获取文章数据
const allArticles = await getCollection('articles');
const sortedArticles = allArticles
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());

// 获取最新文章（用于大图展示）
const featuredArticle = sortedArticles[0];

// 获取其他热门文章（用于右侧列表）
const recentArticles = sortedArticles.slice(1, 5);

// 文章分类配置
const categoryConfig = {
  news: { label: '新闻', color: 'bg-red-100 text-red-600' },
  guide: { label: '指南', color: 'bg-blue-100 text-blue-600' },
  review: { label: '评测', color: 'bg-green-100 text-green-600' },
  analysis: { label: '分析', color: 'bg-purple-100 text-purple-600' },
  tutorial: { label: '教程', color: 'bg-teal-100 text-teal-600' },
};
---

<Layout title="U卡评测网 - 最专业的数字货币卡片评测平台">
  <div class="min-h-screen bg-gradient-to-br from-slate-50 to-indigo-100">
    <!-- 社区化的 Hero Section -->
    <section class="relative bg-white pt-20 pb-12">
      <div class="max-w-7xl mx-auto px-6 lg:px-8 pt-8">
        <!-- 主标题区域 -->
        <div class="text-center mb-12">
          <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            发现最适合你的
            <span class="bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent"
              >数字货币U卡</span
            >
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">真实用户评测 · 专业深度分析 · 最新优惠信息</p>

          <!-- 搜索栏 -->
          <div class="mt-8 max-w-2xl mx-auto">
            <div class="relative">
              <input
                type="text"
                placeholder="搜索U卡、交易所或查看评测..."
                class="w-full px-6 py-4 pr-32 text-gray-900 bg-white border border-gray-200 rounded-2xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all"
              />
              <div class="absolute right-2 top-1/2 -translate-y-1/2 flex items-center gap-2">
                <button class="px-4 py-2 text-sm text-gray-500 hover:text-gray-700 transition-colors">
                  高级筛选
                </button>
                <button class="px-6 py-2 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 transition-colors">
                  搜索
                </button>
              </div>
            </div>
            <!-- 热门搜索标签 -->
            <div class="flex items-center gap-2 mt-4 flex-wrap justify-center">
              <span class="text-sm text-gray-500">热门：</span>
              <a
                href="#"
                class="px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
                >币安卡</a
              >
              <a
                href="#"
                class="px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
                >免KYC</a
              >
              <a
                href="#"
                class="px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
                >虚拟卡</a
              >
              <a
                href="#"
                class="px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
                >低手续费</a
              >
              <a
                href="#"
                class="px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
                >USDT充值</a
              >
            </div>
          </div>
        </div>

        <!-- 三栏内容展示 -->
        <div class="grid lg:grid-cols-3 gap-6 mt-12">
          <!-- 最新评测 -->
          <div class="bg-white rounded-2xl border border-gray-200 p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                  ></path>
                </svg>
                最新评测
              </h3>
              <a href="/articles" class="text-sm text-indigo-600 hover:text-indigo-700">查看全部 →</a>
            </div>
            <div class="space-y-3">
              <article class="group">
                <a href="#" class="block">
                  <div class="flex items-start gap-3">
                    <img
                      src="/api/placeholder/60/60"
                      alt="OneKey Card"
                      class="w-14 h-14 rounded-lg object-cover flex-shrink-0"
                    />
                    <div class="flex-1 min-w-0">
                      <h4
                        class="font-medium text-gray-900 group-hover:text-indigo-600 transition-colors line-clamp-1"
                      >
                        OneKey Card 深度评测：安全与便利的平衡
                      </h4>
                      <div class="flex items-center gap-3 mt-1 text-xs text-gray-500">
                        <span>2小时前</span>
                        <span>·</span>
                        <span>128 阅读</span>
                      </div>
                    </div>
                  </div>
                </a>
              </article>

              <article class="group">
                <a href="#" class="block">
                  <div class="flex items-start gap-3">
                    <img
                      src="/api/placeholder/60/60"
                      alt="Binance Card"
                      class="w-14 h-14 rounded-lg object-cover flex-shrink-0"
                    />
                    <div class="flex-1 min-w-0">
                      <h4
                        class="font-medium text-gray-900 group-hover:text-indigo-600 transition-colors line-clamp-1"
                      >
                        2025年币安卡最新费率调整解读
                      </h4>
                      <div class="flex items-center gap-3 mt-1 text-xs text-gray-500">
                        <span>5小时前</span>
                        <span>·</span>
                        <span>256 阅读</span>
                      </div>
                    </div>
                  </div>
                </a>
              </article>

              <article class="group">
                <a href="#" class="block">
                  <div class="flex items-start gap-3">
                    <img
                      src="/api/placeholder/60/60"
                      alt="Crypto.com"
                      class="w-14 h-14 rounded-lg object-cover flex-shrink-0"
                    />
                    <div class="flex-1 min-w-0">
                      <h4
                        class="font-medium text-gray-900 group-hover:text-indigo-600 transition-colors line-clamp-1"
                      >
                        Crypto.com卡返现攻略：如何最大化收益
                      </h4>
                      <div class="flex items-center gap-3 mt-1 text-xs text-gray-500">
                        <span>1天前</span>
                        <span>·</span>
                        <span>412 阅读</span>
                      </div>
                    </div>
                  </div>
                </a>
              </article>
            </div>
          </div>

          <!-- 热门讨论 -->
          <div class="bg-white rounded-2xl border border-gray-200 p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
                <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"
                  ></path>
                </svg>
                热门讨论
              </h3>
              <a href="/community" class="text-sm text-indigo-600 hover:text-indigo-700">进入社区 →</a>
            </div>
            <div class="space-y-3">
              <div class="group cursor-pointer">
                <div class="flex items-center gap-1 mb-1">
                  <span class="px-2 py-0.5 bg-orange-100 text-orange-700 text-xs rounded-full">热</span>
                  <h4 class="font-medium text-gray-900 group-hover:text-indigo-600 transition-colors text-sm">
                    新手求助：第一张U卡该选哪个？
                  </h4>
                </div>
                <div class="flex items-center gap-3 text-xs text-gray-500">
                  <span>42 回复</span>
                  <span>·</span>
                  <span>刚刚更新</span>
                </div>
              </div>

              <div class="group cursor-pointer">
                <div class="flex items-center gap-1 mb-1">
                  <span class="px-2 py-0.5 bg-green-100 text-green-700 text-xs rounded-full">精华</span>
                  <h4 class="font-medium text-gray-900 group-hover:text-indigo-600 transition-colors text-sm">
                    实测：5张主流U卡手续费对比
                  </h4>
                </div>
                <div class="flex items-center gap-3 text-xs text-gray-500">
                  <span>28 回复</span>
                  <span>·</span>
                  <span>3小时前</span>
                </div>
              </div>

              <div class="group cursor-pointer">
                <h4 class="font-medium text-gray-900 group-hover:text-indigo-600 transition-colors text-sm mb-1">
                  Dupay最新风控政策变化通知
                </h4>
                <div class="flex items-center gap-3 text-xs text-gray-500">
                  <span>15 回复</span>
                  <span>·</span>
                  <span>5小时前</span>
                </div>
              </div>

              <div class="group cursor-pointer">
                <h4 class="font-medium text-gray-900 group-hover:text-indigo-600 transition-colors text-sm mb-1">
                  分享：我的U卡被冻结经历及解决方法
                </h4>
                <div class="flex items-center gap-3 text-xs text-gray-500">
                  <span>89 回复</span>
                  <span>·</span>
                  <span>1天前</span>
                </div>
              </div>
            </div>
          </div>

          <!-- 优惠活动 -->
          <div class="bg-white rounded-2xl border border-gray-200 p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
                <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"
                  ></path>
                </svg>
                限时优惠
              </h3>
              <a href="/deals" class="text-sm text-indigo-600 hover:text-indigo-700">全部优惠 →</a>
            </div>
            <div class="space-y-3">
              <div
                class="border border-red-200 bg-red-50 rounded-lg p-3 group cursor-pointer hover:bg-red-100 transition-colors"
              >
                <div class="flex items-start justify-between mb-2">
                  <h4 class="font-medium text-gray-900 text-sm">币安卡新用户专享</h4>
                  <span class="px-2 py-0.5 bg-red-600 text-white text-xs rounded-full">限时</span>
                </div>
                <p class="text-xs text-gray-600 mb-2">开卡送 $25 USDT，首月免手续费</p>
                <div class="flex items-center justify-between">
                  <span class="text-xs text-gray-500">剩余 2 天</span>
                  <span class="text-xs text-red-600 font-medium">立即领取 →</span>
                </div>
              </div>

              <div
                class="border border-gray-200 rounded-lg p-3 group cursor-pointer hover:bg-gray-50 transition-colors"
              >
                <h4 class="font-medium text-gray-900 text-sm mb-1">OneKey Card 早鸟优惠</h4>
                <p class="text-xs text-gray-600 mb-2">终身免年费 + 0.5% 返现</p>
                <div class="flex items-center justify-between">
                  <span class="text-xs text-gray-500">长期有效</span>
                  <span class="text-xs text-indigo-600 font-medium">查看详情 →</span>
                </div>
              </div>

              <div
                class="border border-gray-200 rounded-lg p-3 group cursor-pointer hover:bg-gray-50 transition-colors"
              >
                <h4 class="font-medium text-gray-900 text-sm mb-1">Dupay 推荐奖励</h4>
                <p class="text-xs text-gray-600 mb-2">邀请好友各得 $10</p>
                <div class="flex items-center justify-between">
                  <span class="text-xs text-gray-500">本月剩余 156 份</span>
                  <span class="text-xs text-indigo-600 font-medium">参与活动 →</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 最新资讯模块 -->
    <section class="py-16 bg-gradient-to-br from-gray-50 via-white to-indigo-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            最新资讯
          </h2>
          <p class="text-lg text-gray-600">
            了解数字货币卡片行业最新动态与深度评测
          </p>
        </div>

        {allArticles.length > 0 ? (
          <div class="grid lg:grid-cols-3 gap-8">
            {featuredArticle && (
              <div class="lg:col-span-2">
                <article class="group relative h-[450px] rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300">
                  <div
                    class="absolute inset-0 bg-cover bg-center"
                    style={`background-image: url('${featuredArticle.data.image || '/default-article-bg.jpg'}')`}
                  >
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
                  </div>
                  <div class="relative h-full flex flex-col justify-end p-8">
                    <div class="mb-4 flex items-center gap-3">
                      <span class="inline-flex items-center px-3 py-1 rounded-full bg-indigo-500 text-white text-xs font-medium">
                        精选
                      </span>
                      {featuredArticle.data.category && (
                        <span class={`px-3 py-1 rounded-full text-xs font-medium ${categoryConfig[featuredArticle.data.category]?.color || 'bg-gray-100 text-gray-600'}`}>
                          {categoryConfig[featuredArticle.data.category]?.label || '文章'}
                        </span>
                      )}
                    </div>
                    <h3 class="text-2xl lg:text-3xl font-bold text-white mb-3 group-hover:text-yellow-300 transition-colors">
                      <a href={`/articles/${featuredArticle.slug}`} class="hover:underline">
                        {featuredArticle.data.title}
                      </a>
                    </h3>
                    <p class="text-white/90 text-base mb-4 line-clamp-2">
                      {featuredArticle.data.description}
                    </p>
                  </div>
                </article>
              </div>
            )}
            <div class="lg:col-span-1">
              <div class="bg-white rounded-2xl shadow-lg p-6">
                <div class="flex items-center justify-between mb-6">
                  <h3 class="text-lg font-bold text-gray-900">近期文章</h3>
                  <a href="/articles" class="text-sm text-indigo-600 hover:text-indigo-700 font-medium">
                    查看全部 →
                  </a>
                </div>
                <div class="space-y-4">
                  {recentArticles.length > 0 ? (
                    recentArticles.map((article, index) => (
                      <article class="group" key={article.slug}>
                        <a href={`/articles/${article.slug}`} class="block">
                          <div class="flex gap-4 p-3 rounded-lg hover:bg-gray-50 transition-colors">
                            <div class="flex-1 min-w-0">
                              <h4 class="text-sm font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors line-clamp-2 mb-1">
                                {article.data.title}
                              </h4>
                              <div class="flex items-center gap-3 text-xs text-gray-500">
                                <span>{new Date(article.data.publishDate).toLocaleDateString('zh-CN')}</span>
                              </div>
                            </div>
                          </div>
                        </a>
                      </article>
                    ))
                  ) : (
                    <p class="text-gray-500 text-center py-8">暂无更多文章</p>
                  )}
                </div>
              </div>
            </div>
          </div>
        ) : (
          <div class="text-center py-12">
            <div class="max-w-md mx-auto">
              <h3 class="text-lg font-medium text-gray-900 mb-2">内容准备中</h3>
              <p class="text-gray-500">我们正在准备精彩的内容，敬请期待！</p>
            </div>
          </div>
        )}
      </div>
    </section>

    <!-- 推荐U卡部分 -->
    <section class="bg-white px-6 py-16 lg:px-8">
      <div class="mx-auto max-w-7xl">
        <div class="mb-12 text-center">
          <h2 class="mb-4 text-4xl font-bold text-gray-900">推荐U卡</h2>
          <p class="mx-auto max-w-3xl text-xl text-gray-600">
            精选市场上最优质的数字货币借记卡，助您轻松实现加密资产的日常消费
          </p>
        </div>
        <CardTableContainer client:load />
      </div>
    </section>
  </div>