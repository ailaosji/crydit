---
import Layout from '../layouts/Layout.astro';
import CardTableContainer from '../components/CardTableContainer.tsx';
import BankRecommendationModule from '../components/BankRecommendationModule.tsx';
import WalletRecommendationModule from '../components/WalletRecommendationModule.tsx';
import FeaturedCardsSection from '../components/FeaturedCardsSection.tsx';
import ExchangesSection from '../components/ExchangesSection.tsx';
import { getCollection } from 'astro:content';

// 获取文章数据
const allArticles = await getCollection('articles');
const sortedArticles = allArticles
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());

// 获取银行数据
const banks = await getCollection('banks');

// 获取钱包数据
const wallets = await getCollection('wallets');

// 获取最新文章（用于大图展示）
const featuredArticle = sortedArticles[0];

// 获取其他热门文章（用于右侧列表）
const recentArticles = sortedArticles.slice(1, 5);

// 文章分类配置
const categoryConfig = {
  news: { label: '新闻', color: 'bg-red-100 text-red-600' },
  guide: { label: '指南', color: 'bg-blue-100 text-blue-600' },
  review: { label: '评测', color: 'bg-green-100 text-green-600' },
  analysis: { label: '分析', color: 'bg-purple-100 text-purple-600' },
  tutorial: { label: '教程', color: 'bg-teal-100 text-teal-600' },
};
---

<Layout title="U卡评测网 - 最专业的数字货币卡片评测平台">
  <div class="min-h-screen bg-gradient-to-br from-slate-50 to-indigo-100">
    <!-- 增强版 Hero Section -->
    <section class="relative bg-gradient-to-br from-indigo-50 via-purple-50 to-white overflow-hidden pt-20 pb-20">
      <!-- 背景装饰元素 -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <!-- 大圆形装饰 -->
        <div class="absolute -top-40 -right-40 w-96 h-96 bg-gradient-to-br from-indigo-200/40 to-purple-200/40 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-gradient-to-tr from-blue-200/40 to-indigo-200/40 rounded-full blur-3xl"></div>

        <!-- 几何装饰 -->
        <div class="absolute top-20 right-1/4 w-20 h-20 border-2 border-indigo-200/50 rounded-2xl rotate-12 animate-pulse"></div>
        <div class="absolute bottom-32 left-1/4 w-16 h-16 border-2 border-purple-200/50 rounded-full animate-bounce" style="animation-duration: 3s;"></div>

        <!-- 卡片装饰 -->
        <div class="absolute top-1/4 left-12 w-32 h-20 bg-gradient-to-br from-indigo-400/20 to-purple-400/20 rounded-xl transform -rotate-12 backdrop-blur-sm"></div>
        <div class="absolute bottom-1/3 right-16 w-28 h-18 bg-gradient-to-br from-blue-400/20 to-indigo-400/20 rounded-xl transform rotate-12 backdrop-blur-sm"></div>
      </div>

      <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
        <!-- 主标题区域 - 加强视觉层次 -->
        <div class="text-center mb-16">
          <!-- 顶部标签 -->
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/80 backdrop-blur-sm rounded-full shadow-md mb-6 animate-fade-in">
            <span class="relative flex h-3 w-3">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-indigo-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-3 w-3 bg-indigo-500"></span>
            </span>
            <span class="text-sm font-semibold text-gray-700">2025年度最专业U卡评测平台</span>
          </div>

          <!-- 主标题 - 更大更突出 -->
          <h1 class="text-5xl sm:text-6xl lg:text-7xl font-extrabold text-gray-900 mb-6 leading-tight">
            <span class="block mb-2">申请海外VISA/万事达</span>
            <span class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 bg-clip-text text-transparent animate-gradient">
              数字货币U卡
            </span>
          </h1>

          <!-- 副标题 - 更清晰的层次 -->
          <p class="text-xl sm:text-2xl text-gray-600 max-w-3xl mx-auto mb-4 font-medium">
            官方合作 • 开卡优惠 • 专业测评精选
          </p>

          <!-- 数据展示 - 增加信任感 -->
          <div class="flex items-center justify-center gap-8 text-sm text-gray-500 mb-10">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-indigo-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
              </svg>
              <span class="font-medium">50+ U卡品牌</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-purple-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span class="font-medium">100+ 真实评测</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-pink-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"/>
              </svg>
              <span class="font-medium">即时更新</span>
            </div>
          </div>

          <!-- 增强版搜索栏 -->
          <div class="mt-10 max-w-3xl mx-auto">
            <div class="relative group">
              <!-- 搜索框发光效果 -->
              <div class="absolute -inset-1 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 rounded-3xl opacity-0 group-hover:opacity-20 blur transition-all duration-500"></div>

              <div class="relative bg-white rounded-2xl shadow-2xl">
                <div class="flex items-center">
                  <!-- 搜索图标 -->
                  <div class="pl-6 pr-3">
                    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                  </div>

                  <!-- 输入框 -->
                  <input
                    type="text"
                    placeholder="搜索U卡名称、交易所或查看评测报告..."
                    class="flex-1 px-2 py-5 text-lg text-gray-900 bg-transparent border-0 focus:outline-none focus:ring-0 placeholder-gray-400"
                  />

                  <!-- 右侧按钮组 -->
                  <div class="flex items-center gap-2 pr-3">
                    <button class="px-4 py-2.5 text-sm text-gray-600 hover:text-gray-900 font-medium transition-colors hidden sm:block">
                      高级筛选
                    </button>
                    <button class="px-8 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl hover:from-indigo-700 hover:to-purple-700 transition-all transform hover:scale-105 shadow-lg">
                      搜索
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <!-- 热门搜索标签 - 重新设计 -->
            <div class="flex items-center gap-3 mt-6 flex-wrap justify-center">
              <span class="text-sm font-medium text-gray-600 flex items-center gap-1">
                <svg class="w-4 h-4 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd"/>
                </svg>
                热门搜索
              </span>
              <a
                href="/cards"
                class="px-4 py-1.5 text-sm bg-white text-gray-700 rounded-full hover:bg-indigo-50 hover:text-indigo-700 transition-all shadow-sm border border-gray-200 font-medium"
                >币安卡</a
              >
              <a
                href="/cards"
                class="px-4 py-1.5 text-sm bg-white text-gray-700 rounded-full hover:bg-indigo-50 hover:text-indigo-700 transition-all shadow-sm border border-gray-200 font-medium"
                >免KYC</a
              >
              <a
                href="/cards"
                class="px-4 py-1.5 text-sm bg-white text-gray-700 rounded-full hover:bg-indigo-50 hover:text-indigo-700 transition-all shadow-sm border border-gray-200 font-medium"
                >虚拟卡</a
              >
              <a
                href="/cards"
                class="px-4 py-1.5 text-sm bg-white text-gray-700 rounded-full hover:bg-indigo-50 hover:text-indigo-700 transition-all shadow-sm border border-gray-200 font-medium"
                >低手续费</a
              >
              <a
                href="/cards"
                class="px-4 py-1.5 text-sm bg-white text-gray-700 rounded-full hover:bg-indigo-50 hover:text-indigo-700 transition-all shadow-sm border border-gray-200 font-medium"
                >USDT充值</a
              >
            </div>
          </div>

          <!-- 向下滚动提示 -->
          <div class="mt-16 flex flex-col items-center animate-bounce">
            <span class="text-xs text-gray-400 mb-2">探索更多</span>
            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
          </div>
        </div>
      </div>
    </section>

    <!-- 推荐U卡部分 - 合并年度最佳和推荐U卡 -->
    <section class="bg-gradient-to-br from-gray-50 via-white to-gray-50 px-6 py-20 lg:px-8 relative overflow-hidden">
      {/* 装饰元素 */}
      <div class="absolute top-0 right-0 w-64 h-64 bg-indigo-100/30 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-64 h-64 bg-purple-100/30 rounded-full blur-3xl"></div>

      <div class="mx-auto max-w-7xl relative z-10">
        <div class="mb-16 text-center">
          {/* 小标签 */}
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-yellow-100 to-orange-100 rounded-full mb-4">
            <svg class="w-5 h-5 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            <span class="text-sm font-bold text-yellow-800">编辑精选</span>
          </div>

          <div class="flex flex-col sm:flex-row items-center justify-center gap-3 mb-4">
            <h2 class="text-4xl lg:text-5xl font-extrabold text-gray-900">
              <span class="bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">推荐U卡</span>
            </h2>
            <span class="relative px-5 py-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-xl font-bold rounded-full shadow-xl transform -rotate-2">
              2025
              {/* 闪光效果 */}
              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-20 animate-pulse"></div>
            </span>
          </div>

          <p class="mx-auto max-w-3xl text-xl text-gray-600 font-medium mb-8">
            根据用户评价和专业测评，为您推荐2025年度最优质的数字货币卡片
          </p>

          {/* 查看所有按钮 */}
          <div class="mb-12">
            <a
              href="/cards"
              class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-gray-900 to-gray-800 text-white rounded-xl font-semibold hover:from-gray-800 hover:to-gray-700 transition-all transform hover:scale-105 shadow-lg"
            >
              <span>查看所有U卡</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </div>

        {/* 精选卡片 */}
        <div class="mb-20">
          <FeaturedCardsSection client:load />
        </div>

        {/* 卡片对比表格 */}
        <CardTableContainer client:load />

        {/* 银行推荐 */}
        <BankRecommendationModule banks={banks} client:load />
      </div>
    </section>

    <!-- 钱包推荐模块 -->
    <WalletRecommendationModule wallets={wallets} client:load />

    <!-- 合作交易所模块 - 使用组件 -->
    <ExchangesSection client:load />

    <!-- 最新资讯模块 -->
    <section class="py-20 bg-white relative overflow-hidden">
      {/* 背景装饰 */}
      <div class="absolute inset-0 overflow-hidden pointer-events-none opacity-40">
        <div class="absolute top-1/4 left-0 w-96 h-96 bg-gradient-to-br from-blue-100 to-indigo-100 rounded-full blur-3xl"></div>
        <div class="absolute bottom-1/4 right-0 w-96 h-96 bg-gradient-to-br from-purple-100 to-pink-100 rounded-full blur-3xl"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center mb-16">
          {/* 标签 */}
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-full mb-4">
            <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z" clip-rule="evenodd"/>
              <path d="M15 7h1a2 2 0 012 2v5.5a1.5 1.5 0 01-3 0V7z"/>
            </svg>
            <span class="text-sm font-bold text-blue-700">行业动态</span>
          </div>

          <h2 class="text-4xl lg:text-5xl font-extrabold text-gray-900 mb-4">
            最新资讯
          </h2>
          <p class="text-lg sm:text-xl text-gray-600 max-w-2xl mx-auto">
            了解数字货币卡片行业最新动态与深度评测
          </p>
        </div>

        {sortedArticles.length > 0 ? (
          <div class="grid lg:grid-cols-3 gap-8">
            <!-- 左侧大图文章 -->
            {featuredArticle && (
              <div class="lg:col-span-2">
                <a href={`/articles/${featuredArticle.slug}`} class="group block">
                  <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-indigo-500 to-purple-600 aspect-[16/9]">
                    {featuredArticle.data.image ? (
                      <img
                        src={featuredArticle.data.image}
                        alt={featuredArticle.data.title}
                        class="w-full h-full object-cover opacity-80 group-hover:scale-105 transition-transform duration-500"
                      />
                    ) : (
                      <div class="absolute inset-0 flex items-center justify-center">
                        <svg class="w-20 h-20 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                        </svg>
                      </div>
                    )}
                    <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
                    <div class="absolute bottom-0 left-0 right-0 p-6">
                      <span class={`inline-block px-3 py-1 rounded-full text-xs font-medium mb-3 ${categoryConfig[featuredArticle.data.category]?.color || 'bg-gray-100 text-gray-600'}`}>
                        {categoryConfig[featuredArticle.data.category]?.label || '文章'}
                      </span>
                      <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-indigo-200 transition-colors">
                        {featuredArticle.data.title}
                      </h3>
                      <p class="text-white/80 line-clamp-2">{featuredArticle.data.description}</p>
                    </div>
                  </div>
                </a>
              </div>
            )}

            <!-- 右侧文章列表 -->
            <div class="space-y-4">
              {recentArticles.map((article) => (
                <a href={`/articles/${article.slug}`} class="group block bg-white rounded-xl p-4 shadow-sm hover:shadow-md transition-all">
                  <div class="flex items-start gap-4">
                    <div class="flex-1 min-w-0">
                      <span class={`inline-block px-2 py-0.5 rounded text-xs font-medium mb-2 ${categoryConfig[article.data.category]?.color || 'bg-gray-100 text-gray-600'}`}>
                        {categoryConfig[article.data.category]?.label || '文章'}
                      </span>
                      <h4 class="font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors line-clamp-2">
                        {article.data.title}
                      </h4>
                      <p class="text-sm text-gray-500 mt-1">
                        {new Date(article.data.publishDate).toLocaleDateString('zh-CN')}
                      </p>
                    </div>
                  </div>
                </a>
              ))}

              <!-- 查看更多 -->
              <a href="/articles" class="group flex items-center justify-center gap-2 py-3 text-indigo-600 font-medium hover:text-indigo-700 transition-colors">
                查看全部文章
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          </div>
        ) : (
          <div class="text-center py-12">
            <p class="text-gray-500">暂无文章</p>
          </div>
        )}
      </div>
    </section>

    <!-- 底部 CTA - 增强版 -->
    <section class="relative py-24 bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600 overflow-hidden">
      {/* 动态背景装饰 */}
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-white/10 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-white/10 rounded-full blur-3xl" style="animation: pulse 3s infinite;"></div>

        {/* 网格背景 */}
        <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-20"></div>
      </div>

      <div class="max-w-5xl mx-auto px-4 text-center relative z-10">
        {/* 图标装饰 */}
        <div class="inline-flex items-center justify-center w-20 h-20 bg-white/20 backdrop-blur-sm rounded-2xl mb-6">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>

        <h2 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-white mb-6 leading-tight">
          开始您的<br class="sm:hidden"/>数字货币之旅
        </h2>
        <p class="text-xl sm:text-2xl text-white/90 mb-10 font-medium max-w-2xl mx-auto">
          立即申请U卡，享受全球消费的便利
        </p>

        {/* 特性列表 */}
        <div class="flex flex-wrap items-center justify-center gap-6 mb-10 text-white/90">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="font-medium">5分钟快速开卡</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="font-medium">全球通用</span>
