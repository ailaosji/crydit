  <script define:vars={{ featuredCards }}>
    // 配置
    const itemsPerPage = 10;
    let currentPage = 1;
    const allCards = featuredCards;
    const totalPages = Math.ceil(allCards.length / itemsPerPage);

    // 随机生成讨论数（模拟数据）
    function getDiscussionCount(cardSlug) {
      let hash = 0;
      for (let i = 0; i < cardSlug.length; i++) {
        hash = ((hash << 5) - hash) + cardSlug.charCodeAt(i);
        hash = hash & hash;
      }
      return Math.abs(hash % 50) + 5;
    }

    // 获取卡片类型样式
    function getCardTypeDisplay(cardType) {
      const types = {
        'visa': 'bg-blue-100 text-blue-800',
        'mastercard': 'bg-orange-100 text-orange-800',
        'unionpay': 'bg-red-100 text-red-800'
      };
      const className = types[cardType] || 'bg-gray-100 text-gray-800';
      const text = cardType ? cardType.toUpperCase() : '其他';
      return '<span class="px-2 py-1 text-xs font-medium rounded-full ' + className + '">' + text + '</span>';
    }

    // 生成勾选或叉号图标
    function getCheckIcon(isActive) {
      if (isActive) {
        return '<span class="text-green-600 text-lg">✓</span>';
      } else {
        return '<span class="text-gray-400 text-lg">✗</span>';
      }
    }

    // 渲染表格行
    function renderTableRow(card, index) {
      const rank = index + 1;
      const discussionCount = getDiscussionCount(card.slug);
      
      let row = '<tr class="hover:bg-gray-50 transition-colors">';
      
      // 第一列：排名和卡片信息
      row += '<td class="px-4 py-4">';
      row += '<div class="flex items-center">';
      row += '<div class="flex-shrink-0 w-8 h-8 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold text-sm">';
      row += rank;
      row += '</div>';
      row += '<div class="ml-3">';
      row += '<a href="/cards/' + card.slug + '" class="text-sm font-medium text-gray-900 hover:text-indigo-600 transition-colors cursor-pointer block">';
      row += card.data.name;
      row += '</a>';
      row += '<div class="text-xs text-gray-500 line-clamp-2 mt-1">' + (card.data.shortDescription || card.data.description || '') + '</div>';
      row += '</div>';
      row += '</div>';
      row += '</td>';
      
      // 卡片类型
      row += '<td class="px-2 py-4 text-center">';
      row += getCardTypeDisplay(card.data.cardType);
      row += '</td>';
      
      // 虚拟卡
      row += '<td class="px-2 py-4 text-center">';
      row += getCheckIcon(card.data.isVirtual);
      row += '</td>';
      
      // 实体卡
      row += '<td class="px-2 py-4 text-center">';
      row += getCheckIcon(card.data.isPhysical);
      row += '</td>';
      
      // 充值费
      row += '<td class="px-2 py-4 text-center">';
      row += '<span class="text-xs text-gray-900">' + (card.data.depositFee || '免费') + '</span>';
      row += '</td>';
      
      // 兑换费
      row += '<td class="px-2 py-4 text-center">';
      row += '<span class="text-xs text-gray-900">' + (card.data.exchangeFee || '0.5%') + '</span>';
      row += '</td>';
      
      // 交易费
      row += '<td class="px-2 py-4 text-center">';
      row += '<span class="text-xs text-gray-900">' + (card.data.transactionFee || '1.5%') + '</span>';
      row += '</td>';
      
      // 提现费
      row += '<td class="px-2 py-4 text-center">';
      row += '<span class="text-xs text-gray-900">' + (card.data.withdrawalFee || '2%') + '</span>';
      row += '</td>';
      
      // 年费
      row += '<td class="px-2 py-4 text-center">';
      if (card.data.annualFee === false) {
        row += '<span class="px-2 py-0.5 text-xs font-medium rounded-full bg-green-100 text-green-800">免费</span>';
      } else {
        row += '<span class="px-2 py-0.5 text-xs font-medium rounded-full bg-red-100 text-red-800">收费</span>';
      }
      row += '</td>';
      
      // 讨论（带图标，点击打开详情页）
      row += '<td class="px-2 py-4 text-center">';
      row += '<a href="/cards/' + card.slug + '" class="inline-flex items-center space-x-1 text-gray-600 hover:text-indigo-600 transition-colors group">';
      row += '<svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">';
      row += '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>';
      row += '</svg>';
      row += '<span class="text-xs font-medium">' + discussionCount + '</span>';
      row += '</a>';
      row += '</td>';
      
      // 操作列（立即申请按钮）
      row += '<td class="px-2 py-4 text-center">';
      row += '<a href="/cards/' + card.slug + '" class="inline-flex items-center px-3 py-1.5 bg-gradient-to-r from-indigo-500 to-purple-600 text-white text-xs font-medium rounded-lg hover:from-indigo-600 hover:to-purple-700 transition-all shadow-sm hover:shadow-md transform hover:scale-105">';
      row += '立即申请';
      row += '<svg class="ml-1 w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">';
      row += '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>';
      row += '</svg>';
      row += '</a>';
      row += '</td>';
      
      row += '</tr>';
      return row;
    }

    // 渲染当前页
    function renderPage() {
      const startIndex = (currentPage - 1) * itemsPerPage;
      const endIndex = Math.min(startIndex + itemsPerPage, allCards.length);
      const currentCards = allCards.slice(startIndex, endIndex);
      
      const tableBody = document.getElementById('card-table-body');
      if (!tableBody) return;
      
      tableBody.innerHTML = '';
      
      currentCards.forEach((card, index) => {
        const globalIndex = startIndex + index;
        tableBody.innerHTML += renderTableRow(card, globalIndex);
      });
      
      // 更新分页信息
      updatePaginationInfo();
    }

    // 更新分页信息
    function updatePaginationInfo() {
      const startIndex = (currentPage - 1) * itemsPerPage + 1;
      const endIndex = Math.min(currentPage * itemsPerPage, allCards.length);
      
      const pageStartEl = document.getElementById('page-start');
      const pageEndEl = document.getElementById('page-end');
      const totalItemsEl = document.getElementById('total-items');
      
      if (pageStartEl) pageStartEl.textContent = startIndex;
      if (pageEndEl) pageEndEl.textContent = endIndex;
      if (totalItemsEl) totalItemsEl.textContent = allCards.length;
      
      // 更新按钮状态
      const prevBtn = document.getElementById('prev-page');
      const nextBtn = document.getElementById('next-page');
      
      if (prevBtn) {
        prevBtn.disabled = currentPage === 1;
        prevBtn.classList.toggle('opacity-50', currentPage === 1);
        prevBtn.classList.toggle('cursor-not-allowed', currentPage === 1);
      }
      
      if (nextBtn) {
        nextBtn.disabled = currentPage === totalPages;
        nextBtn.classList.toggle('opacity-50', currentPage === totalPages);
        nextBtn.classList.toggle('cursor-not-allowed', currentPage === totalPages);
      }
      
      // 渲染页码
      renderPageNumbers();
    }

    // 渲染页码
    function renderPageNumbers() {
      const pageNumbersEl = document.getElementById('page-numbers');
      if (!pageNumbersEl) return;
      
      pageNumbersEl.innerHTML = '';
      
      // 计算显示的页码范围
      let startPage = Math.max(1, currentPage - 2);
      let endPage = Math.min(totalPages, currentPage + 2);
      
      // 如果总页数小于等于5，显示所有页码
      if (totalPages <= 5) {
        startPage = 1;
        endPage = totalPages;
      }
      
      // 确保显示5个页码（如果可能）
      if (endPage - startPage < 4) {
        if (startPage === 1) {
          endPage = Math.min(5, totalPages);
        } else {
          startPage = Math.max(1, endPage - 4);
        }
      }
      
      // 渲染页码按钮
      for (let i = startPage; i <= endPage; i++) {
        const isActive = i === currentPage;
        const pageBtn = document.createElement('button');
        pageBtn.className = `px-3 py-1 text-sm font-medium border rounded-md ${
          isActive 
            ? 'bg-indigo-600 text-white border-indigo-600' 
            : 'text-gray-700 bg-white border-gray-300 hover:bg-gray-50'
        }`;
        pageBtn.textContent = i;
        pageBtn.onclick = () => goToPage(i);
        pageNumbersEl.appendChild(pageBtn);
      }
    }

    // 跳转到指定页
    function goToPage(page) {
      if (page >= 1 && page <= totalPages && page !== currentPage) {
        currentPage = page;
        renderPage();
        
        // 滚动到表格顶部
        const table = document.getElementById('cards-table');
        if (table) {
          table.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      }
    }

    // 初始化事件监听器
    function initPagination() {
      const prevBtn = document.getElementById('prev-page');
      const nextBtn = document.getElementById('next-page');
      
      if (prevBtn) {
        prevBtn.addEventListener('click', () => {
          if (currentPage > 1) {
            goToPage(currentPage - 1);
          }
        });
      }
      
      if (nextBtn) {
        nextBtn.addEventListener('click', () => {
          if (currentPage < totalPages) {
            goToPage(currentPage + 1);
          }
        });
      }
    }

    // 页面加载完成后初始化
    document.addEventListener('DOMContentLoaded', function() {
      if (allCards && allCards.length > 0) {
        renderPage();
        initPagination();
      } else {
        // 如果没有数据，显示空状态
        const tableBody = document.getElementById('card-table-body');
        if (tableBody) {
          tableBody.innerHTML = `
            <tr>
              <td colspan="11" class="px-6 py-12 text-center">
                <div class="text-gray-500">
                  <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  <h3 class="mt-2 text-sm font-medium text-gray-900">暂无数据</h3>
                  <p class="mt-1 text-sm text-gray-500">目前还没有U卡数据，请稍后再来查看。</p>
                </div>
              </td>
            </tr>
          `;
        }
        
        // 隐藏分页控件
        const paginationEl = document.querySelector('.px-6.py-4.bg-gray-50.border-t.border-gray-200');
        if (paginationEl) {
          paginationEl.style.display = 'none';
        }
      }
    });
  </script>
