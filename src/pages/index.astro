---
import Layout from '../layouts/Layout.astro';
import CardTableContainer from '../components/CardTableContainer.tsx';
import { getCollection } from 'astro:content';

// 获取文章数据
const allArticles = await getCollection('articles');
const sortedArticles = allArticles
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());

// 获取最新文章（用于大图展示）
const featuredArticle = sortedArticles[0];

// 获取其他热门文章（用于右侧列表）
const recentArticles = sortedArticles.slice(1, 5);

// 文章分类配置
const categoryConfig = {
  news: { label: '新闻', color: 'bg-red-100 text-red-600' },
  guide: { label: '指南', color: 'bg-blue-100 text-blue-600' },
  review: { label: '评测', color: 'bg-green-100 text-green-600' },
  analysis: { label: '分析', color: 'bg-purple-100 text-purple-600' },
  tutorial: { label: '教程', color: 'bg-teal-100 text-teal-600' },
};
---

<Layout title="U卡评测网 - 最专业的数字货币卡片评测平台">
  <div class="min-h-screen bg-gradient-to-br from-slate-50 to-indigo-100">
    <!-- 优化后的 Hero Section -->
    <section
      class="relative overflow-hidden bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600"
    >
      <!-- 背景装饰元素 -->
      <div class="absolute inset-0">
        <div
          class="absolute left-0 top-0 h-72 w-72 -translate-x-36 -translate-y-36 animate-pulse rounded-full bg-white/10 blur-3xl"
        >
        </div>
        <div
          class="absolute bottom-0 right-0 h-96 w-96 translate-x-48 translate-y-48 animate-pulse rounded-full bg-purple-300/20 blur-3xl"
        >
        </div>
        <div
          class="absolute left-1/2 top-1/2 h-64 w-64 -translate-x-32 -translate-y-32 rounded-full bg-pink-300/10 blur-2xl"
        >
        </div>
      </div>
      <div class="relative mx-auto max-w-7xl px-6 lg:px-8">
        <div class="flex min-h-[50vh] py-16">
          <div class="flex flex-1 items-center justify-center">
            <div class="mx-auto max-w-4xl text-center">
              <div class="mb-8">
                <h1
                  class="mb-4 whitespace-nowrap text-4xl font-bold leading-tight text-white md:text-5xl lg:text-6xl"
                >
                  让数字货币<span
                    class="bg-gradient-to-r from-yellow-300 to-pink-300 bg-clip-text text-transparent"
                    >走进现实生活</span
                  >
                </h1>
                <p class="mx-auto mb-2 max-w-2xl text-lg text-white/90 md:text-xl">
                  数字货币U卡评测平台，好用的都在这。
                </p>
                <p class="text-sm text-white/70 md:text-base">专业测评 · 安全可靠 · 简单易用</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 最新资讯模块 -->
    <section class="py-16 bg-gradient-to-br from-gray-50 via-white to-indigo-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            最新资讯
          </h2>
          <p class="text-lg text-gray-600">
            了解数字货币卡片行业最新动态与深度评测
          </p>
        </div>

        {allArticles.length > 0 ? (
          <div class="grid lg:grid-cols-3 gap-8">
            {featuredArticle && (
              <div class="lg:col-span-2">
                <article class="group relative h-[450px] rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300">
                  <div
                    class="absolute inset-0 bg-cover bg-center"
                    style={`background-image: url('${featuredArticle.data.image || '/default-article-bg.jpg'}')`}
                  >
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
                  </div>
                  <div class="relative h-full flex flex-col justify-end p-8">
                    <div class="mb-4 flex items-center gap-3">
                      <span class="inline-flex items-center px-3 py-1 rounded-full bg-indigo-500 text-white text-xs font-medium">
                        精选
                      </span>
                      {featuredArticle.data.category && (
                        <span class={`px-3 py-1 rounded-full text-xs font-medium ${categoryConfig[featuredArticle.data.category]?.color || 'bg-gray-100 text-gray-600'}`}>
                          {categoryConfig[featuredArticle.data.category]?.label || '文章'}
                        </span>
                      )}
                    </div>
                    <h3 class="text-2xl lg:text-3xl font-bold text-white mb-3 group-hover:text-yellow-300 transition-colors">
                      <a href={`/articles/${featuredArticle.slug}`} class="hover:underline">
                        {featuredArticle.data.title}
                      </a>
                    </h3>
                    <p class="text-white/90 text-base mb-4 line-clamp-2">
                      {featuredArticle.data.description}
                    </p>
                  </div>
                </article>
              </div>
            )}
            <div class="lg:col-span-1">
              <div class="bg-white rounded-2xl shadow-lg p-6">
                <div class="flex items-center justify-between mb-6">
                  <h3 class="text-lg font-bold text-gray-900">近期文章</h3>
                  <a href="/articles" class="text-sm text-indigo-600 hover:text-indigo-700 font-medium">
                    查看全部 →
                  </a>
                </div>
                <div class="space-y-4">
                  {recentArticles.length > 0 ? (
                    recentArticles.map((article, index) => (
                      <article class="group" key={article.slug}>
                        <a href={`/articles/${article.slug}`} class="block">
                          <div class="flex gap-4 p-3 rounded-lg hover:bg-gray-50 transition-colors">
                            <div class="flex-1 min-w-0">
                              <h4 class="text-sm font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors line-clamp-2 mb-1">
                                {article.data.title}
                              </h4>
                              <div class="flex items-center gap-3 text-xs text-gray-500">
                                <span>{new Date(article.data.publishDate).toLocaleDateString('zh-CN')}</span>
                              </div>
                            </div>
                          </div>
                        </a>
                      </article>
                    ))
                  ) : (
                    <p class="text-gray-500 text-center py-8">暂无更多文章</p>
                  )}
                </div>
              </div>
            </div>
          </div>
        ) : (
          <div class="text-center py-12">
            <div class="max-w-md mx-auto">
              <h3 class="text-lg font-medium text-gray-900 mb-2">内容准备中</h3>
              <p class="text-gray-500">我们正在准备精彩的内容，敬请期待！</p>
            </div>
          </div>
        )}
      </div>
    </section>

    <!-- 推荐U卡部分 -->
    <section class="bg-white px-6 py-16 lg:px-8">
      <div class="mx-auto max-w-7xl">
        <div class="mb-12 text-center">
          <h2 class="mb-4 text-4xl font-bold text-gray-900">推荐U卡</h2>
          <p class="mx-auto max-w-3xl text-xl text-gray-600">
            精选市场上最优质的数字货币借记卡，助您轻松实现加密资产的日常消费
          </p>
        </div>
        <CardTableContainer client:load />
      </div>
    </section>
  </div>
</Layout>