              <a 
                href="${card.data.affiliateLink || '#'}"
                target="_blank"
                class="px-3 py-1.5 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-lg text-xs font-medium hover:from-indigo-700 hover:to-purple-700 transition-all shadow-sm hover:shadow-md text-center whitespace-nowrap"
              >
                立即申请
              </a>
            </div>
          </td>
        </tr>
      `;
