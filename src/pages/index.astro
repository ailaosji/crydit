---
import Layout from '../layouts/Layout.astro';
import CardTableContainer from '../components/CardTableContainer.tsx';
import BankRecommendationModule from '../components/BankRecommendationModule.tsx';
import FeaturedCardsSection from '../components/FeaturedCardsSection.tsx';
import ExchangesSection from '../components/ExchangesSection.tsx';
import { getCollection } from 'astro:content';

// 获取文章数据
const allArticles = await getCollection('articles');
const sortedArticles = allArticles
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());

// 获取银行数据
const banks = await getCollection('banks');

// 获取最新文章（用于大图展示）
const featuredArticle = sortedArticles[0];

// 获取其他热门文章（用于右侧列表）
const recentArticles = sortedArticles.slice(1, 5);

// 文章分类配置
const categoryConfig = {
  news: { label: '新闻', color: 'bg-red-100 text-red-600' },
  guide: { label: '指南', color: 'bg-blue-100 text-blue-600' },
  review: { label: '评测', color: 'bg-green-100 text-green-600' },
  analysis: { label: '分析', color: 'bg-purple-100 text-purple-600' },
  tutorial: { label: '教程', color: 'bg-teal-100 text-teal-600' },
};
---

<Layout title="U卡评测网 - 最专业的数字货币卡片评测平台">
  <div class="min-h-screen bg-gradient-to-br from-slate-50 to-indigo-100">
    <!-- 社区化的 Hero Section -->
    <section class="relative bg-white pt-20 pb-12">
      <div class="max-w-7xl mx-auto px-6 lg:px-8 pt-8">
        <!-- 主标题区域 -->
        <div class="text-center mb-12">
          <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            申请海外VISA/万事达U卡，开始使用
            <span class="bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent"
              >数字货币</span
            >
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">官方合作、开卡优惠 、专业测评精选U卡</p>

          <!-- 搜索栏 -->
          <div class="mt-8 max-w-2xl mx-auto">
            <div class="relative">
              <input
                type="text"
                placeholder="搜索U卡、交易所或查看评测..."
                class="w-full px-6 py-4 pr-32 text-gray-900 bg-white border border-gray-200 rounded-2xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all"
              />
              <div class="absolute right-2 top-1/2 -translate-y-1/2 flex items-center gap-2">
                <button class="px-4 py-2 text-sm text-gray-500 hover:text-gray-700 transition-colors">
                  高级筛选
                </button>
                <button class="px-6 py-2 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 transition-colors">
                  搜索
                </button>
              </div>
            </div>
            <!-- 热门搜索标签 -->
            <div class="flex items-center gap-2 mt-4 flex-wrap justify-center">
              <span class="text-sm text-gray-500">热门：</span>
              <a
                href="#"
                class="px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
                >币安卡</a
              >
              <a
                href="#"
                class="px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
                >免KYC</a
              >
              <a
                href="#"
                class="px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
                >虚拟卡</a
              >
              <a
                href="#"
                class="px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
                >低手续费</a
              >
              <a
                href="#"
                class="px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
                >USDT充值</a
              >
            </div>
          </div>
        </div>
      </div>
    </section>

    <FeaturedCardsSection client:load />

    <!-- 推荐U卡部分 -->
    <section class="bg-white px-6 py-16 lg:px-8">
      <div class="mx-auto max-w-7xl">
        <div class="mb-12 text-center">
          <h2 class="mb-4 text-4xl font-bold text-gray-900">推荐U卡</h2>
          <p class="mx-auto max-w-3xl text-xl text-gray-600">
            精选市场上最优质的数字货币借记卡，助您轻松实现加密资产的日常消费
          </p>
        </div>
        <CardTableContainer client:load />
        <BankRecommendationModule banks={banks} client:load />
      </div>
    </section>

    <!-- 合作交易所模块 - 使用组件 -->
    <ExchangesSection client:load />

    <!-- 最新资讯模块 -->
    <section class="py-16 bg-gradient-to-br from-gray-50 via-white to-indigo-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            最新资讯
          </h2>
          <p class="text-lg text-gray-600">
            了解数字货币卡片行业最新动态与深度评测
          </p>
        </div>

        {sortedArticles.length > 0 ? (
          <div class="grid lg:grid-cols-3 gap-8">
            <!-- 左侧大图文章 -->
            {featuredArticle && (
              <div class="lg:col-span-2">
                <a href={`/articles/${featuredArticle.slug}`} class="group block">
                  <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-indigo-500 to-purple-600 aspect-[16/9]">
                    {featuredArticle.data.image ? (
                      <img
                        src={featuredArticle.data.image}
                        alt={featuredArticle.data.title}
                        class="w-full h-full object-cover opacity-80 group-hover:scale-105 transition-transform duration-500"
                      />
                    ) : (
                      <div class="absolute inset-0 flex items-center justify-center">
                        <svg class="w-20 h-20 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                        </svg>
                      </div>
                    )}
                    <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
                    <div class="absolute bottom-0 left-0 right-0 p-6">
                      <span class={`inline-block px-3 py-1 rounded-full text-xs font-medium mb-3 ${categoryConfig[featuredArticle.data.category]?.color || 'bg-gray-100 text-gray-600'}`}>
                        {categoryConfig[featuredArticle.data.category]?.label || '文章'}
                      </span>
                      <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-indigo-200 transition-colors">
                        {featuredArticle.data.title}
                      </h3>
                      <p class="text-white/80 line-clamp-2">{featuredArticle.data.description}</p>
                    </div>
                  </div>
                </a>
              </div>
            )}

            <!-- 右侧文章列表 -->
            <div class="space-y-4">
              {recentArticles.map((article) => (
                <a href={`/articles/${article.slug}`} class="group block bg-white rounded-xl p-4 shadow-sm hover:shadow-md transition-all">
                  <div class="flex items-start gap-4">
                    <div class="flex-1 min-w-0">
                      <span class={`inline-block px-2 py-0.5 rounded text-xs font-medium mb-2 ${categoryConfig[article.data.category]?.color || 'bg-gray-100 text-gray-600'}`}>
                        {categoryConfig[article.data.category]?.label || '文章'}
                      </span>
                      <h4 class="font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors line-clamp-2">
                        {article.data.title}
                      </h4>
                      <p class="text-sm text-gray-500 mt-1">
                        {new Date(article.data.publishDate).toLocaleDateString('zh-CN')}
                      </p>
                    </div>
                  </div>
                </a>
              ))}

              <!-- 查看更多 -->
              <a href="/articles" class="group flex items-center justify-center gap-2 py-3 text-indigo-600 font-medium hover:text-indigo-700 transition-colors">
                查看全部文章
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          </div>
        ) : (
          <div class="text-center py-12">
            <p class="text-gray-500">暂无文章</p>
          </div>
        )}
      </div>
    </section>

    <!-- 底部 CTA -->
    <section class="py-16 bg-gradient-to-r from-indigo-600 to-purple-600">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          开始您的数字货币之旅
        </h2>
        <p class="text-xl text-white/90 mb-8">
          立即申请U卡，享受全球消费的便利
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/cards" class="inline-flex items-center justify-center px-8 py-3 bg-white text-indigo-600 font-semibold rounded-full hover:bg-gray-100 transition-colors">
            浏览所有U卡
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a href="/articles" class="inline-flex items-center justify-center px-8 py-3 border border-white/30 text-white font-semibold rounded-full hover:bg-white/10 transition-colors">
            阅读使用指南
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>