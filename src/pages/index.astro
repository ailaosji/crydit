---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 获取内容集合
let allArticles = [];
let allCards = [];
let allExchanges = [];

try {
  allArticles = await getCollection('articles');
  allCards = await getCollection('cards');  
  allExchanges = await getCollection('exchanges');
  
  // 按日期排序文章
  allArticles = allArticles.sort((a, b) => 
    new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
  );
  
  // 按评分排序U卡
  allCards = allCards.sort((a, b) => b.data.rating - a.data.rating);
  
  // 按排名排序交易所
  allExchanges = allExchanges.sort((a, b) => a.data.ranking - b.data.ranking);
} catch (error) {
  console.log('Error loading collections:', error);
}
---

<Layout title="U卡评测 - 专业的数字货币U卡评测社区">
  <div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100">
    <!-- Hero Section - Modern Material Design -->
    <section class="relative overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-600 via-purple-600 to-blue-700">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(255,255,255,0.1),transparent_70%)]"></div>
        <div class="absolute top-0 left-0 w-96 h-96 bg-white/10 rounded-full blur-3xl -translate-x-48 -translate-y-48"></div>
        <div class="absolute bottom-0 right-0 w-96 h-96 bg-purple-300/20 rounded-full blur-3xl translate-x-48 translate-y-48"></div>
      </div>
      
      <div class="relative max-w-7xl mx-auto px-6 lg:px-8 py-24 lg:py-32">
        <div class="text-center">
          <!-- Badge -->
          <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/20 backdrop-blur-sm border border-white/30 text-white/90 text-sm font-medium mb-8">
            <span class="w-2 h-2 bg-green-400 rounded-full mr-2 animate-pulse"></span>
            专业评测 · 实时更新 · 安全可靠
          </div>
          
          <h1 class="text-6xl lg:text-7xl font-bold text-white mb-8 leading-tight">
            专业的数字货币
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-300 to-orange-400">
              U卡评测
            </span>
            社区
          </h1>
          
          <p class="text-xl lg:text-2xl text-white/80 mb-12 max-w-4xl mx-auto leading-relaxed">
            深度评测 · 实时排行 · 专业分析<br>
            为您的数字资产选择提供最权威的参考
          </p>
          
          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row justify-center gap-4 mb-16">
            <a href="/cards" class="group relative inline-flex items-center px-8 py-4 rounded-2xl bg-white text-indigo-600 font-semibold shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300">
              <svg class="w-5 h-5 mr-2 group-hover:rotate-12 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
              </svg>
              查看U卡评测
            </a>
            <a href="/exchanges" class="group relative inline-flex items-center px-8 py-4 rounded-2xl bg-white/10 backdrop-blur-sm border border-white/20 text-white font-semibold hover:bg-white/20 transform hover:-translate-y-1 transition-all duration-300">
              <svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
              </svg>
              交易所排行
            </a>
          </div>
          
          <!-- Stats Cards -->
          <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 max-w-4xl mx-auto">
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
              <div class="text-3xl font-bold text-white mb-1">{allCards.length}+</div>
              <div class="text-white/70 text-sm">评测U卡</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
              <div class="text-3xl font-bold text-white mb-1">{allExchanges.length}+</div>
              <div class="text-white/70 text-sm">合作交易所</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
              <div class="text-3xl font-bold text-white mb-1">{allArticles.length}+</div>
              <div class="text-white/70 text-sm">专业文章</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
              <div class="text-3xl font-bold text-white mb-1">50K+</div>
              <div class="text-white/70 text-sm">用户信赖</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 最新资讯 - Material Cards -->
    <section class="py-20 relative">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16">
          <div class="inline-flex items-center px-4 py-2 rounded-full bg-indigo-100 text-indigo-700 text-sm font-medium mb-4">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            实时更新
          </div>
          <h2 class="text-5xl font-bold text-gray-900 mb-6">最新资讯</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            掌握数字货币U卡的最新动态和深度分析，让您的决策更加明智
          </p>
        </div>
        
        {allArticles.length > 0 ? (
          <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {allArticles.slice(0, 6).map((article, index) => (
              <article class="group relative bg-white rounded-3xl shadow-lg hover:shadow-2xl transform hover:-translate-y-2 transition-all duration-500 overflow-hidden">
                <!-- Card Header -->
                <div class="absolute top-4 left-4 z-10">
                  <span class={`px-3 py-1 rounded-full text-xs font-medium ${
                    article.data.category === 'news' ? 'bg-red-100 text-red-800' :
                    article.data.category === 'guide' ? 'bg-blue-100 text-blue-800' :
                    article.data.category === 'review' ? 'bg-green-100 text-green-800' :
                    'bg-purple-100 text-purple-800'
                  }`}>
                    {article.data.category}
                  </span>
                </div>
                
                <!-- Image Placeholder -->
                <div class="h-48 bg-gradient-to-br from-indigo-400 to-purple-500 relative overflow-hidden">
                  <div class="absolute inset-0 bg-black/20 group-hover:bg-black/30 transition-colors"></div>
                  <div class="absolute bottom-4 right-4 text-white/80 text-sm">
                    {new Date(article.data.publishDate).toLocaleDateString('zh-CN')}
                  </div>
                </div>
                
                <div class="p-6">
                  <h3 class="text-xl font-bold mb-3 line-clamp-2 group-hover:text-indigo-600 transition-colors">
                    <a href={`/articles/${article.slug}`}>
                      {article.data.title}
                    </a>
                  </h3>
                  <p class="text-gray-600 mb-4 line-clamp-3 text-sm leading-relaxed">
                    {article.data.description}
                  </p>
                  <a 
                    href={`/articles/${article.slug}`}
                    class="inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium text-sm group-hover:translate-x-1 transition-transform"
                  >
                    阅读更多 
                    <svg class="ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </a>
                </div>
              </article>
            ))}
          </div>
        ) : (
          <div class="bg-white rounded-3xl p-16 text-center shadow-lg">
            <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-2">更多精彩内容即将发布</h3>
            <p class="text-gray-600">我们正在为您准备最新最全的内容，敬请期待！</p>
          </div>
        )}
        
        <div class="text-center mt-12">
          <a 
            href="/articles" 
            class="inline-flex items-center px-8 py-4 bg-indigo-600 text-white rounded-2xl hover:bg-indigo-700 transform hover:-translate-y-1 transition-all duration-300 font-semibold shadow-lg hover:shadow-xl"
          >
            查看全部文章
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- 热门U卡推荐 - Material Design 3 风格 -->
    <section class="py-24 bg-gradient-to-br from-slate-50 to-slate-100 relative overflow-hidden">
      <!-- MD3 Background Pattern -->
      <div class="absolute inset-0">
        <div class="absolute top-0 right-0 w-96 h-96 bg-indigo-100 rounded-full blur-3xl opacity-60"></div>
        <div class="absolute bottom-0 left-0 w-80 h-80 bg-purple-100 rounded-full blur-3xl opacity-40"></div>
      </div>
      
      <div class="max-w-7xl mx-auto px-6 lg:px-8 relative">
        <!-- MD3 Header -->
        <div class="text-center mb-16">
          <div class="inline-flex items-center px-4 py-2 rounded-full bg-indigo-100 text-indigo-700 text-sm font-medium mb-6 shadow-sm">
            <div class="w-2 h-2 bg-indigo-600 rounded-full mr-2 animate-pulse"></div>
            精选推荐
          </div>
          <h2 class="text-5xl font-bold text-gray-900 mb-4 tracking-tight">热门U卡排行</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            基于用户评分、安全性和实用性的综合评估排名
          </p>
        </div>
        
        {allCards.length > 0 ? (
          <!-- MD3 Card Container -->
          <div class="bg-white rounded-3xl shadow-lg overflow-hidden border border-gray-200">
            <!-- MD3 Data Table -->
            <div class="overflow-x-auto">
              <table class="min-w-full">
                <!-- MD3 Table Header -->
                <thead class="bg-gray-50 border-b border-gray-200">
                  <tr>
                    <th class="px-4 py-4 text-left text-sm font-medium text-gray-700 uppercase tracking-wider w-20">
                      <div class="flex items-center space-x-2">
                        <span>排名</span>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12"/>
                        </svg>
                      </div>
                    </th>
                    <th class="px-4 py-4 text-left text-sm font-medium text-gray-700 uppercase tracking-wider w-80">
                      卡片信息
                    </th>
                    <th class="px-4 py-4 text-left text-sm font-medium text-gray-700 uppercase tracking-wider w-32">
                      开卡费用
                    </th>
                    <th class="px-4 py-4 text-left text-sm font-medium text-gray-700 uppercase tracking-wider w-40">
                      手续费
                    </th>
                    <th class="px-4 py-4 text-center text-sm font-medium text-gray-700 uppercase tracking-wider w-20">
                      年费
                    </th>
                    <th class="px-4 py-4 text-center text-sm font-medium text-gray-700 uppercase tracking-wider w-32">
                      用户评分
                    </th>
                    <th class="px-4 py-4 text-center text-sm font-medium text-gray-700 uppercase tracking-wider w-28">
                      操作
                    </th>
                  </tr>
                </thead>
                
                <!-- MD3 Table Body -->
                <tbody class="divide-y divide-gray-100">
                  {allCards.slice(0, 8).map((card, index) => (
                    <tr class="hover:bg-gray-50 transition-all duration-200 group">
                      <!-- MD3 Ranking Column -->
                      <td class="px-4 py-6 w-20">
                        <div class="flex items-center justify-center">
                          <!-- MD3 Ranking Badge -->
                          <div class="relative">
                            {index < 3 ? (
                              <!-- Top 3 - Special Badge -->
                              <div class={`w-12 h-12 rounded-2xl flex items-center justify-center font-bold text-white shadow-lg relative overflow-hidden ${
                                index === 0 ? 'bg-gradient-to-br from-yellow-400 to-amber-600' :
                                index === 1 ? 'bg-gradient-to-br from-gray-300 to-gray-500' :
                                'bg-gradient-to-br from-amber-600 to-orange-700'
                              }`}>
                                <span class="text-lg font-bold z-10">{index + 1}</span>
                                
                                <!-- Crown Icon for #1 -->
                                {index === 0 && (
                                  <div class="absolute -top-1 -right-1">
                                    <svg class="w-5 h-5 text-yellow-300 drop-shadow-lg" fill="currentColor" viewBox="0 0 24 24">
                                      <path d="M5 16L3 7l5.5 5L12 4l3.5 8L21 7l-2 9H5zm2.7-2h8.6l.9-5.4-2.1 1.8L12 8l-3.1 2.4-2.1-1.8L7.7 14z"/>
                                    </svg>
                                  </div>
                                )}
                              </div>
                            ) : (
                              <!-- Other ranks -->
                              <div class="w-10 h-10 rounded-xl bg-gray-100 flex items-center justify-center border border-gray-200">
                                <span class="text-base font-semibold text-gray-900">{index + 1}</span>
                              </div>
                            )}
                          </div>
                        </div>
                      </td>
                      
                      <!-- MD3 Card Info Column -->
                      <td class="px-4 py-6 w-80">
                        <div class="flex items-start space-x-3">
                          <!-- MD3 Card Avatar -->
                          <div class="w-10 h-10 rounded-xl bg-indigo-100 flex items-center justify-center flex-shrink-0">
                            <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                            </svg>
                          </div>
                          
                          <div class="flex-1 min-w-0">
                            <a href={`/cards/${card.slug}`} class="block group-hover:text-indigo-600 transition-colors">
                              <h3 class="text-base font-semibold text-gray-900 mb-1 truncate">
                                {card.data.name}
                              </h3>
                            </a>
                            <p class="text-xs text-gray-500 mb-2 line-clamp-2">
                              {card.data.description?.slice(0, 50)}...
                            </p>
                            
                            <!-- MD3 Chips -->
                            <div class="flex flex-wrap gap-1">
                              <div class={`inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium border ${
                                card.data.cardType === 'visa' 
                                  ? 'bg-blue-50 text-blue-700 border-blue-200' 
                                  : 'bg-red-50 text-red-700 border-red-200'
                              }`}>
                                {card.data.cardType?.toUpperCase() || 'N/A'}
                              </div>
                              
                              {card.data.isVirtual && (
                                <div class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-50 text-green-700 border border-green-200">
                                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"/>
                                  </svg>
                                  虚拟
                                </div>
                              )}
                              
                              {card.data.isPhysical && (
                                <div class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-purple-50 text-purple-700 border border-purple-200">
                                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                                  </svg>
                                  实体
                                </div>
                              )}
                            </div>
                          </div>
                        </div>
                      </td>
                      
                      <!-- MD3 Card Fees Column -->
                      <td class="px-4 py-6 w-32">
                        <div class="space-y-3">
                          {card.data.isVirtual && (
                            <div class="text-center bg-green-50 rounded-lg px-2 py-2">
                              <div class="flex items-center justify-center mb-1">
                                <svg class="w-3 h-3 mr-1 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"/>
                                </svg>
                                <span class="text-xs text-gray-600">虚拟卡</span>
                              </div>
                              <span class={`font-medium px-2 py-1 rounded-md text-xs block ${
                                card.data.virtualCardFee === '免费' || card.data.virtualCardFee === '$0' 
                                  ? 'bg-green-100 text-green-800' 
                                  : 'bg-red-100 text-red-800'
                              }`}>
                                {card.data.virtualCardFee || '未知'}
                              </span>
                            </div>
                          )}
                          
                          {card.data.isPhysical && (
                            <div class="text-center bg-purple-50 rounded-lg px-2 py-2">
                              <div class="flex items-center justify-center mb-1">
                                <svg class="w-3 h-3 mr-1 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                                </svg>
                                <span class="text-xs text-gray-600">实体卡</span>
                              </div>
                              <span class={`font-medium px-2 py-1 rounded-md text-xs block ${
                                card.data.physicalCardFee === '免费' || card.data.physicalCardFee === '$0' 
                                  ? 'bg-green-100 text-green-800' 
                                  : 'bg-orange-100 text-orange-800'
                              }`}>
                                {card.data.physicalCardFee || '未知'}
                              </span>
                            </div>
                          )}
                          
                          {!card.data.isVirtual && !card.data.isPhysical && (
                            <div class="text-center text-xs text-gray-500 py-3">
                              <svg class="w-6 h-6 mx-auto mb-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                              </svg>
                              <span>待更新</span>
                            </div>
                          )}
                        </div>
                      </td>
                      
                      <!-- MD3 Transaction Fees Column -->
                      <td class="px-4 py-6 w-40">
                        <div class="space-y-3">
                          <!-- Deposit Fee -->
                          <div class="text-sm">
                            <div class="text-gray-500 mb-1 font-medium text-xs">充值手续费</div>
                            <div class="font-semibold text-gray-900 text-sm">
                              {card.data.depositFee || 'N/A'}
                            </div>
                          </div>
                          
                          <!-- Transaction Fee -->
                          <div class="text-sm">
                            <div class="text-gray-500 mb-1 font-medium text-xs">交易手续费</div>
                            <div class="font-semibold text-gray-900 text-sm">
                              {card.data.transactionFee || 'N/A'}
                            </div>
                          </div>
                          
                          <!-- Withdrawal Fee -->
                          <div class="text-sm">
                            <div class="text-gray-500 mb-1 font-medium text-xs">提现手续费</div>
                            <div class="font-semibold text-gray-900 text-sm">
                              {card.data.withdrawalFee || 'N/A'}
                            </div>
                          </div>
                        </div>
                      </td>
                      
                      <!-- MD3 Annual Fee Column -->
                      <td class="px-4 py-6 w-20">
                        <div class="flex justify-center">
                          <span class={`inline-flex items-center px-3 py-2 rounded-full text-sm font-medium ${
                            card.data.annualFee 
                              ? 'bg-red-100 text-red-800' 
                              : 'bg-green-100 text-green-800'
                          }`}>
                            <svg class={`w-4 h-4 mr-1 ${card.data.annualFee ? 'text-red-800' : 'text-green-800'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              {card.data.annualFee ? (
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                              ) : (
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                              )}
                            </svg>
                            {card.data.annualFee ? '收费' : '免费'}
                          </span>
                        </div>
                      </td>
                      
                      <!-- MD3 User Rating Column -->
                      <td class="px-4 py-6 w-32">
                        <div class="text-center space-y-2">
                          <!-- Current Rating Display -->
                          <div class="text-lg font-bold text-gray-900">{card.data.rating}</div>
                          
                          <!-- Interactive Star Rating -->
                          <div class="flex justify-center space-x-1 mb-2">
                            {[...Array(5)].map((_, i) => (
