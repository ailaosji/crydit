    });

    // 重置显示数量
    currentlyDisplayed = 0;

    // 更新统计
    updateFilteredCount();

    // 重新渲染
    renderInitialItems();

    // 重新初始化观察器
    initInfiniteScroll();
  }

  // 更新筛选结果统计
  function updateFilteredCount() {
    const countEl = document.getElementById('filtered-count');
    if (countEl) {
      countEl.textContent = filteredCards.length;
    }
  }

  // 初始渲染
  function renderInitialItems() {
    const tableBody = document.getElementById('card-table-body');
    if (!tableBody) return;

    // 清空表格
    tableBody.innerHTML = '';

    if (filteredCards.length === 0) {
      // 显示无数据状态
      tableBody.innerHTML = `
        <tr>
          <td colspan="6" class="px-6 py-12 text-center">
            <div class="text-gray-500">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">未找到匹配的卡片</h3>
              <p class="mt-1 text-sm text-gray-500">请尝试调整筛选条件或搜索关键词。</p>
            </div>
          </td>
        </tr>
      `;

      // 隐藏加载相关元素
      hideLoadingElements();
      return;
    }

    // 加载初始数据
    loadMoreItems();
  }

  // 加载更多数据
  function loadMoreItems() {
    if (isLoading || currentlyDisplayed >= filteredCards.length) {
      return;
    }

    isLoading = true;
    showLoadingIndicator();

    // 模拟加载延迟
    setTimeout(() => {
      const itemsToLoad = Math.min(itemsPerLoad, filteredCards.length - currentlyDisplayed);
      const startIndex = currentlyDisplayed;
      const endIndex = startIndex + itemsToLoad;
      
      const tableBody = document.getElementById('card-table-body');
      if (tableBody) {
        // 添加新行
        for (let i = startIndex; i < endIndex; i++) {
          const card = filteredCards[i];
          tableBody.innerHTML += renderTableRow(card, i);
        }
      }

      currentlyDisplayed += itemsToLoad;
      isLoading = false;

      // 更新状态显示
      updateLoadingStatus();

    }, 500); // 500ms 加载延迟，提升用户体验
  }

  // 显示加载指示器
  function showLoadingIndicator() {
    const loadingEl = document.getElementById('loading-more');
    const allLoadedEl = document.getElementById('all-loaded');

    if (loadingEl) loadingEl.classList.remove('hidden');
    if (allLoadedEl) allLoadedEl.classList.add('hidden');
  }

  // 更新加载状态
  function updateLoadingStatus() {
    const loadingEl = document.getElementById('loading-more');
    const allLoadedEl = document.getElementById('all-loaded');
    const totalDisplayedEl = document.getElementById('total-displayed');

    if (currentlyDisplayed >= filteredCards.length) {
      // 全部加载完成
      if (loadingEl) loadingEl.classList.add('hidden');
      if (allLoadedEl) allLoadedEl.classList.remove('hidden');
      if (totalDisplayedEl) totalDisplayedEl.textContent = currentlyDisplayed;
    } else {
      // 还有更多内容
      if (loadingEl) loadingEl.classList.add('hidden');
      if (allLoadedEl) allLoadedEl.classList.add('hidden');
    }
  }

  // 隐藏所有加载相关元素
  function hideLoadingElements() {
    const loadingEl = document.getElementById('loading-more');
    const allLoadedEl = document.getElementById('all-loaded');

    if (loadingEl) loadingEl.classList.add('hidden');
    if (allLoadedEl) allLoadedEl.classList.add('hidden');
  }

  // 初始化无限滚动
  function initInfiniteScroll() {
    if (observerInitialized) {
      return; // 避免重复初始化
    }

    // 创建加载触发元素
    const loadTrigger = document.createElement('div');
    loadTrigger.id = 'load-trigger';
    loadTrigger.style.height = '20px';
    loadTrigger.style.visibility = 'hidden';

    // 将触发元素添加到表格容器后
    const tableContainer = document.querySelector('#cards-table').parentElement;
    if (tableContainer) {
      tableContainer.appendChild(loadTrigger);
    }

    // 创建 Intersection Observer
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting && !isLoading && currentlyDisplayed < filteredCards.length) {
          loadMoreItems();
        }
      });
    }, {
      rootMargin: '200px' // 提前200px开始加载
    });

    // 开始观察
    observer.observe(loadTrigger);
    observerInitialized = true;
  }

  // 初始化事件监听器
  function initializeEventListeners() {
    const cardTypeFilter = document.getElementById('card-type-filter');
    const cardFormFilter = document.getElementById('card-form-filter');
    const annualFeeFilter = document.getElementById('annual-fee-filter');
    const searchInput = document.getElementById('search-input');
    const searchBtn = document.getElementById('search-btn');
    const resetBtn = document.getElementById('reset-filters');

    if (cardTypeFilter) {
      cardTypeFilter.addEventListener('change', (e) => {
        filters.cardType = e.target.value;
        applyFilters();
      });
    }

    if (cardFormFilter) {
      cardFormFilter.addEventListener('change', (e) => {
        filters.cardForm = e.target.value;
        applyFilters();
      });
    }

    if (annualFeeFilter) {
      annualFeeFilter.addEventListener('change', (e) => {
        filters.annualFee = e.target.value;
        applyFilters();
      });
    }

    if (searchInput) {
      searchInput.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
          filters.search = e.target.value.trim();
          applyFilters();
        }
      });

      searchInput.addEventListener('input', (e) => {
        clearTimeout(searchInput.searchTimeout);
        searchInput.searchTimeout = setTimeout(() => {
          filters.search = e.target.value.trim();
          applyFilters();
        }, 300);
      });
    }

    if (searchBtn) {
      searchBtn.addEventListener('click', () => {
        if (searchInput) {
          filters.search = searchInput.value.trim();
          applyFilters();
        }
      });
    }

    if (resetBtn) {
      resetBtn.addEventListener('click', () => {
        filters = {
          cardType: '',
          cardForm: '',
          annualFee: '',
          search: ''
        };

        if (cardTypeFilter) cardTypeFilter.value = '';
        if (cardFormFilter) cardFormFilter.value = '';
        if (annualFeeFilter) annualFeeFilter.value = '';
        if (searchInput) searchInput.value = '';

        applyFilters();
      });
    }

    const prevBtn = document.getElementById('prev-page');
    const nextBtn = document.getElementById('next-page');

    // 移除分页按钮事件监听器，因为我们使用无限加载
    // 这些按钮在新的设计中不存在
  }

  // 页面加载完成后初始化
  document.addEventListener('DOMContentLoaded', function() {
    initializeEventListeners();

    if (featuredCards && featuredCards.length > 0) {
      updateFilteredCount();
      renderInitialItems();
      initInfiniteScroll();
    }
  });
</script>
