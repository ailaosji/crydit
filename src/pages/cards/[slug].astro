---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import GiscusComments from '../../components/GiscusComments.astro';

// 确保这个函数被正确导出
export async function getStaticPaths() {
  try {
    const cards = await getCollection('cards');
    console.log('Cards found:', cards.length); // 调试信息
    
    return cards.map((card) => ({
      params: { slug: card.slug },
      props: { card },
    }));
  } catch (error) {
    console.error('Error in getStaticPaths:', error);
    return [];
  }
}

// 类型定义
interface Props {
  card: CollectionEntry<'cards'>;
}

// 获取传递的 props
const { card } = Astro.props as Props;

// 检查 card 是否存在
if (!card) {
  throw new Error('Card not found');
}

const { 
  title, 
  name, 
  description, 
  cardType, 
  isVirtual, 
  isPhysical, 
  pros, 
  cons, 
  features, 
  limits, 
  rewards, 
  issuer, 
  supportedRegions,
  applicationDocuments,
  supportedCurrencies, 
  supportedPaymentMethods,
  virtualCardPrice, 
  physicalCardPrice, 
  depositFee, 
  transactionFee, 
  withdrawalFee, 
  atmFee, 
  annualFee, 
  affiliateLink,
  invitationCode
} = card.data;

// 获取相关U卡（系统推荐算法）
const allCards = await getCollection('cards');
const relatedCards = allCards
  .map(otherCard => {
    if (otherCard.slug === card.slug) {
      return { card: otherCard, score: -1 };
    }

    let score = 0;
    // 1. 卡类型匹配
    if (otherCard.data.cardType === card.data.cardType) {
      score += 3;
    }
    // 2. 标签匹配
    const commonTags = (card.data.tags || []).filter(tag => (otherCard.data.tags || []).includes(tag));
    score += commonTags.length * 2;
    // 3. 支持的货币匹配
    const commonCurrencies = (card.data.supportedCurrencies || []).filter(currency => (otherCard.data.supportedCurrencies || []).includes(currency));
    score += commonCurrencies.length * 1;
    // 4. 发行商惩罚
    if (otherCard.data.issuer === card.data.issuer) {
      score -= 100;
    }

    return { card: otherCard, score };
  })
  .filter(item => item.score > 0)
  .sort((a, b) => b.score - a.score)
  .map(item => item.card)
  .slice(0, 3);

// 获取相关文章（U卡教程等）
const allArticles = await getCollection('articles');
const relatedArticles = allArticles
  .map(article => {
    let score = 0;
    const articleTitle = article.data.title.toLowerCase();
    const cardName = card.data.name.toLowerCase();
    const cardIssuer = card.data.issuer.toLowerCase();

    // 1. 直接关联
    if ((article.data.relatedCards || []).includes(card.slug)) {
      score += 10;
    }
    // 2. 卡名或发行商在标题中
    if (articleTitle.includes(cardName)) {
      score += 5;
    }
    if (articleTitle.includes(cardIssuer)) {
      score += 3;
    }
    // 3. 共同标签
    const commonTags = (card.data.tags || []).filter(tag => (article.data.tags || []).includes(tag));
    score += commonTags.length * 2;

    return { article, score };
  })
  .filter(item => item.score > 0)
  .sort((a, b) => b.score - a.score)
  .map(item => item.article)
  .slice(0, 4);

// 渲染Markdown内容
const { Content } = await card.render();

import { getEnhancedCurrencyInfo, getPaymentMethodInfo } from '../../config/site-data';

// 生成结构化数据
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": name,
  "description": description,
  "brand": {
    "@type": "Brand",
    "name": issuer
  },
  "offers": {
    "@type": "Offer",
    "price": virtualCardPrice || physicalCardPrice || "0",
    "priceCurrency": "USD",
    "availability": "https://schema.org/InStock"
  },
  "category": "Financial Services",
  "additionalProperty": [
    {
      "@type": "PropertyValue",
      "name": "Card Type",
      "value": cardType
    },
    {
      "@type": "PropertyValue", 
      "name": "Virtual Card",
      "value": isVirtual ? "Yes" : "No"
    },
    {
      "@type": "PropertyValue",
      "name": "Physical Card", 
      "value": isPhysical ? "Yes" : "No"
    }
  ]
};
---

<Layout title={title || `${name} - 全球虚拟信用卡评测`}>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-indigo-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Hero Section with Card Image -->
      <div class="bg-white rounded-3xl shadow-2xl overflow-hidden mb-12">
        <div class="relative">
          <!-- Background Gradient -->
          <div class="absolute inset-0 bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-500"></div>
          
          <!-- Content Container -->
          <div class="relative p-8 lg:p-12">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
              
              <!-- Left: Card Info -->
              <div class="text-white">
                <div class="flex flex-wrap items-center gap-3 mb-6">
                  <span class={`px-4 py-2 rounded-full text-sm font-semibold ${
                    cardType === 'visa' ? 'bg-blue-500 text-white' :
                    cardType === 'mastercard' ? 'bg-red-500 text-white' :
                    'bg-gray-500 text-white'
                  }`}>
                    {cardType?.toUpperCase()}
                  </span>
                  {isVirtual && (
                    <span class="px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-sm font-medium">
                      虚拟卡
                    </span>
                  )}
                  {isPhysical && (
                    <span class="px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-sm font-medium">
                      实体卡
                    </span>
                  )}
                </div>
                
                <h1 class="text-4xl lg:text-5xl font-bold mb-4">{name}</h1>
                <p class="text-xl text-white/90 leading-relaxed mb-8">{description}</p>
                
                <!-- CTA Button -->
                {affiliateLink && (
                  <a 
                    href={affiliateLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-8 py-4 bg-white text-indigo-600 font-bold rounded-2xl hover:bg-gray-100 transition-all transform hover:scale-105 shadow-lg"
                  >
                    立即申请
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                  </a>
                )}
              </div>
              
              <!-- Right: Card Visual -->
              <div class="relative">
                <!-- 推荐标签 -->
                <div class="absolute -top-4 -right-4 bg-green-500 text-white px-4 py-2 rounded-full text-sm font-semibold shadow-lg z-10">
                  推荐
                </div>
                
                <!-- 信用卡设计 -->
                <div class="relative w-96 h-60 rounded-2xl shadow-2xl transform rotate-3 hover:rotate-0 transition-all duration-300 hover:scale-105">
                  <!-- 卡片背景渐变 -->
                  <div class="absolute inset-0 bg-gradient-to-br from-gray-800 via-gray-900 to-purple-900 rounded-2xl"></div>
                  
                  <!-- 装饰性圆形背景 -->
                  <div class="absolute top-8 right-8 w-32 h-32 bg-gradient-to-br from-purple-400/20 to-transparent rounded-full"></div>
                  <div class="absolute -bottom-4 -left-4 w-24 h-24 bg-gradient-to-br from-pink-400/10 to-transparent rounded-full"></div>
                  
                  <!-- 卡片内容 -->
                  <div class="relative z-10 p-8 h-full flex flex-col justify-between text-white">
                    <!-- 顶部：芯片和VISA标志 -->
                    <div class="flex justify-between items-start">
                      <!-- 芯片 -->
                      <div class="w-12 h-9 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-md shadow-inner"></div>
                      <!-- VISA标志 -->
                      <div class="text-2xl font-bold text-white/90 tracking-wider">
                        {cardType === 'visa' ? 'VISA' : 
                         cardType === 'mastercard' ? 'MasterCard' : 
                         cardType?.toUpperCase()}
                      </div>
                    </div>
                    
                    <!-- 中部：卡号 -->
                    <div class="space-y-6">
                      <div class="font-mono text-2xl tracking-wider">
                        •••• •••• •••• ••••
                      </div>
                    </div>
                    
                    <!-- 底部：持卡人和有效期 -->
                    <div class="flex justify-between items-end">
                      <div>
                        <div class="text-xs text-gray-400 mb-1">CARD HOLDER</div>
                        <div class="font-semibold text-lg">{name && name.length > 12 ? name.substring(0, 12) + '...' : name}</div>
                      </div>
                      <div>
                        <div class="text-xs text-gray-400 mb-1">VALID THRU</div>
                        <div class="font-mono text-lg">••/••</div>
                      </div>
                    </div>
                  </div>
                  
                  <!-- 光泽效果 -->
                  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent rounded-2xl transform -skew-x-12 -translate-x-full animate-pulse"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-8">
          
          <!-- Markdown Content -->
          <section class="bg-white rounded-3xl shadow-xl p-8">
            <div class="prose prose-lg max-w-none">
              <Content />
            </div>
          </section>

          <!-- Tiered Fee & Limits Details -->
          {card.data.tiers && card.data.tiers.length > 0 ? (
            card.data.tiers.map(tier => (
              <section class="bg-white rounded-3xl shadow-xl p-8 border-l-4 border-indigo-500 mb-8">
                <h3 class="text-2xl font-bold text-gray-800 mb-6">{tier.name}</h3>

                <div class="grid md:grid-cols-2 gap-x-8 gap-y-6">
                  <div>
                    <h4 class="text-lg font-semibold text-gray-700 mb-3">卡片费用</h4>
                    <ul class="space-y-2 text-sm">
                      <li class="flex justify-between"><span>开卡费:</span> <span class="font-medium">{tier.price}</span></li>
                      <li class="flex justify-between"><span>年费:</span> <span class="font-medium">{tier.annualFee}</span></li>
                    </ul>
                  </div>
                  <div>
                    <h4 class="text-lg font-semibold text-gray-700 mb-3">交易费用</h4>
                    <ul class="space-y-2 text-sm">
                      <li class="flex justify-between"><span>充值费:</span> <span class="font-medium">{tier.depositFee}</span></li>
                      <li class="flex justify-between"><span>交易费:</span> <span class="font-medium">{tier.transactionFee}</span></li>
                      <li class="flex justify-between"><span>ATM提现费:</span> <span class="font-medium">{tier.atmFee}</span></li>
                    </ul>
                  </div>
                  <div>
                    <h4 class="text-lg font-semibold text-gray-700 mb-3">消费限额</h4>
                    <ul class="space-y-2 text-sm">
                      <li class="flex justify-between"><span>单笔交易:</span> <span class="font-medium">{tier.limits?.singleTransaction || 'N/A'}</span></li>
                      <li class="flex justify-between"><span>每日消费:</span> <span class="font-medium">{tier.limits?.dailySpending || 'N/A'}</span></li>
                      <li class="flex justify-between"><span>每月消费:</span> <span class="font-medium">{tier.limits?.monthlySpending || 'N/A'}</span></li>
                    </ul>
                  </div>
                   <div>
                    <h4 class="text-lg font-semibold text-gray-700 mb-3">奖励</h4>
                    <ul class="space-y-2 text-sm">
                      <li class="flex justify-between"><span>返现:</span> <span class="font-medium text-green-600">{tier.rewards?.cashback || 'N/A'}</span></li>
                    </ul>
                  </div>
                </div>
              </section>
            ))
          ) : (
            <>
              {/* Legacy Fee Details Module */}
              <section class="bg-white rounded-3xl shadow-xl p-8">
                <h2 class="text-3xl font-bold text-gray-900 mb-8">费用详情</h2>
                <div class="mb-8">
                  <h3 class="text-xl font-semibold text-gray-800 mb-4">卡片费用</h3>
                   <div class="grid md:grid-cols-2 gap-4">
                    {isVirtual && (
                      <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-2xl p-5 border border-blue-100">
                        <div class="flex justify-between items-start">
                          <div>
                            <p class="text-sm text-gray-600 mb-1">虚拟卡费用</p>
                            <p class="text-2xl font-bold text-gray-900">
                              {virtualCardPrice === 0 ? '免费' : `${virtualCardPrice}`}
                            </p>
                          </div>
                          <div class="p-2 bg-white rounded-lg">
                            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                          </div>
                        </div>
                      </div>
                    )}
                    {isPhysical && (
                       <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-2xl p-5 border border-purple-100">
                        <div class="flex justify-between items-start">
                          <div>
                            <p class="text-sm text-gray-600 mb-1">实体卡费用</p>
                            <p class="text-2xl font-bold text-gray-900">
                              {physicalCardPrice === 0 || physicalCardPrice === null ? '免费' : `${physicalCardPrice}`}
                            </p>
                            {atmFee && (
                              <p class="text-xs text-gray-500 mt-2">
                                ATM取现: {atmFee}
                              </p>
                            )}
                          </div>
                          <div class="p-2 bg-white rounded-lg">
                            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                            </svg>
                          </div>
                        </div>
                      </div>
                    )}
                  </div>
                </div>
                <div class="mb-8">
                  <h3 class="text-xl font-semibold text-gray-800 mb-4">交易费用</h3>
                  <div class="space-y-3">
                    <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl">
                      <span class="text-gray-700">充值费用</span>
                      <span class="font-bold text-gray-900">{depositFee || '免费'}</span>
                    </div>
                    <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl">
                      <span class="text-gray-700">交易手续费</span>
                      <span class="font-bold text-gray-900">{transactionFee || '0.9%'}</span>
                    </div>
                    <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl">
                      <span class="text-gray-700">提现费用</span>
                      <span class="font-bold text-gray-900">{withdrawalFee || '€0.90/次'}</span>
                    </div>
                  </div>
                </div>
                {annualFee !== undefined && (
                  <div class="mt-6 p-4 bg-gradient-to-r from-yellow-50 to-orange-50 rounded-xl border border-yellow-200">
                    <div class="flex items-center justify-between">
                      <div class="flex items-center">
                        <svg class="w-5 h-5 mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                        <span class="text-gray-700">年费</span>
                      </div>
                      <span class={`font-bold ${annualFee ? 'text-orange-600' : 'text-green-600'}`}>
                        {annualFee ? '收费' : '免费'}
                      </span>
                    </div>
                  </div>
                )}
              </section>

              {/* Legacy Spending Limits Module */}
              {limits && (
                <section class="bg-white rounded-3xl shadow-xl p-8">
                  <h2 class="text-3xl font-bold text-gray-900 mb-8">消费限额</h2>
                  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {limits.dailySpending && <div>...</div>}
                    {limits.monthlySpending && <div>...</div>}
                    {limits.singleTransaction && <div>...</div>}
                    {limits.monthlyAtmWithdrawal && <div>...</div>}
                    {limits.dailyAtmWithdrawal && <div>...</div>}
                    {limits.atmWithdrawalLimit && <div>...</div>}
                  </div>
                </section>
              )}
            </>
          )}

          <!-- 支持的加密货币模块 - 增强版 -->
          <section class="bg-white rounded-3xl shadow-xl p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-8 flex items-center">
              <div class="w-10 h-10 bg-gradient-to-br from-orange-500 to-yellow-500 rounded-lg flex items-center justify-center mr-3 shadow-md">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"></path>
                </svg>
              </div>
              支持的货币
            </h2>
            {supportedCurrencies && supportedCurrencies.length > 0 ? (
              <div class="flex flex-wrap items-center gap-4">
                {supportedCurrencies.map((currency) => {
                  const currencyInfo = getEnhancedCurrencyInfo(currency);
                  return (
                    <div class="flex flex-col items-center group cursor-pointer p-2 relative">
                      <div class={`relative w-16 h-16 bg-gradient-to-br ${currencyInfo.bgGradient} rounded-full flex items-center justify-center text-white shadow-lg group-hover:scale-110 transition-transform duration-300 text-xl font-bold`}>
                        {/* Decorative Dots */}
                        {!currencyInfo.isUrl && (
                          <div class="absolute inset-0 bg-repeat bg-center opacity-10" style="background-image: radial-gradient(circle, rgba(255,255,255,0.5) 1px, transparent 1px); background-size: 5px 5px;"></div>
                        )}

                        {/* Icon or Text */}
                        {currencyInfo.isUrl ? (
                          <img src={currencyInfo.icon} alt={`${currencyInfo.name} icon`} class="w-9 h-9" />
                        ) : (
                          <span class="text-sm font-bold tracking-wider">{currencyInfo.icon}</span>
                        )}

                        {/* Gloss Effect */}
                        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-full"></div>
                      </div>
                      <span class="text-xs font-medium text-gray-600 mt-2 group-hover:text-black transition-colors duration-300">
                        {currencyInfo.symbol}
                      </span>
                    </div>
                  );
                })}
              </div>
            ) : (
              <div class="text-center py-12">
                <div class="w-24 h-24 bg-gradient-to-br from-gray-400 to-gray-500 rounded-full flex items-center justify-center text-white font-bold text-3xl mx-auto mb-6 shadow-lg">
                  ₿
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">支持多种主流货币</h3>
                <p class="text-gray-600">包括加密货币和法定货币</p>
              </div>
            )}
          </section>

          <!-- 支持的支付方式模块 -->
          <section class="bg-white rounded-3xl shadow-xl p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-8 flex items-center">
              <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center mr-3">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v2a2 2 0 002 2z"></path>
                </svg>
              </div>
              支持的支付方式
            </h2>
            
            {supportedPaymentMethods && Array.isArray(supportedPaymentMethods) && supportedPaymentMethods.length > 0 ? (
              <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                {supportedPaymentMethods.map((method) => {
                  const info = getPaymentMethodInfo(method);
                  
                  return (
                    <div class={`group flex flex-col items-center p-6 ${info.bgLight} rounded-2xl border-2 ${info.borderColor} hover:scale-105 hover:shadow-2xl transition-all duration-300 cursor-pointer relative overflow-hidden`}>
                      <!-- 装饰性背景元素 -->
                      <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-white/10 to-transparent rounded-full transform translate-x-8 -translate-y-8"></div>
                      
                      <!-- 图标容器 -->
                      <div class={`relative w-16 h-16 bg-gradient-to-br ${info.bgGradient} rounded-2xl flex items-center justify-center mb-4 shadow-lg group-hover:scale-110 group-hover:rotate-1 transition-all duration-300 text-xl`}>
                        <img src={info.icon} alt={`${info.name} icon`} class="w-8 h-8" />
                        <!-- 图标反光效果 -->
                        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/25 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                      </div>
                      
                      <!-- 支付方式名称 -->
                      <span class={`font-bold ${info.textColor} text-center text-base mb-2`}>
                        {info.name}
                      </span>
                      
                      <!-- 支持状态 -->
                      <div class="flex items-center space-x-2">
                        <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse shadow-lg"></div>
                        <span class="text-sm text-gray-600 font-medium">已支持</span>
                      </div>
                      
                      <!-- 悬停箭头指示 -->
                      <div class="absolute bottom-3 right-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <svg class="w-5 h-5 text-gray-400 group-hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                        </svg>
                      </div>
                    </div>
                  );
                })}
              </div>
            ) : (
              <div class="text-center py-8">
                <!-- 显示默认的主流支付方式 -->
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
