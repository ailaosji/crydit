---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import GiscusComments from '../../components/GiscusComments.astro';

// 确保这个函数被正确导出
export async function getStaticPaths() {
  try {
    const cards = await getCollection('cards');
    console.log('Cards found:', cards.length); // 调试信息
    
    return cards.map((card) => ({
      params: { slug: card.slug },
      props: { card },
    }));
  } catch (error) {
    console.error('Error in getStaticPaths:', error);
    return [];
  }
}

// 类型定义
interface Props {
  card: CollectionEntry<'cards'>;
}

// 获取传递的 props
const { card } = Astro.props as Props;

// 检查 card 是否存在
if (!card) {
  throw new Error('Card not found');
}

const { 
  title, 
  name, 
  description, 
  cardType, 
  isVirtual, 
  isPhysical, 
  pros, 
  cons, 
  features, 
  limits, 
  rewards, 
  issuer, 
  supportedRegions, 
  supportedCurrencies, 
  supportedPaymentMethods, // 新增：支持的支付方式
  virtualCardPrice, 
  physicalCardPrice, 
  depositFee, 
  transactionFee, 
  withdrawalFee, 
  atmFee, 
  annualFee, 
  affiliateLink 
} = card.data;

// 获取相关U卡（系统推荐算法）
const allCards = await getCollection('cards');
const relatedCards = allCards
  .map(otherCard => {
    if (otherCard.slug === card.slug) {
      return { card: otherCard, score: -1 };
    }

    let score = 0;
    // 1. 卡类型匹配
    if (otherCard.data.cardType === card.data.cardType) {
      score += 3;
    }
    // 2. 标签匹配
    const commonTags = (card.data.tags || []).filter(tag => (otherCard.data.tags || []).includes(tag));
    score += commonTags.length * 2;
    // 3. 支持的货币匹配
    const commonCurrencies = (card.data.supportedCurrencies || []).filter(currency => (otherCard.data.supportedCurrencies || []).includes(currency));
    score += commonCurrencies.length * 1;
    // 4. 发行商惩罚
    if (otherCard.data.issuer === card.data.issuer) {
      score -= 100;
    }

    return { card: otherCard, score };
  })
  .filter(item => item.score > 0)
  .sort((a, b) => b.score - a.score)
  .map(item => item.card)
  .slice(0, 3);

// 获取相关文章（U卡教程等）
let relatedArticles = [];
if (card.data.relatedArticles) {
  try {
    const allArticles = await getCollection('articles');
    relatedArticles = allArticles.filter(a => 
      card.data.relatedArticles?.includes(a.slug)
    ).slice(0, 4);
  } catch (error) {
    console.warn('Articles collection not found:', error);
  }
}

// 渲染Markdown内容
const { Content } = await card.render();

// 生成结构化数据（移除评分相关）
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": name,
  "description": description,
  "brand": {
    "@type": "Brand",
    "name": issuer
  },
  "offers": {
    "@type": "Offer",
    "price": virtualCardPrice || physicalCardPrice || "0",
    "priceCurrency": "USD",
    "availability": "https://schema.org/InStock"
  },
  "category": "Financial Services",
  "additionalProperty": [
    {
      "@type": "PropertyValue",
      "name": "Card Type",
      "value": cardType
    },
    {
      "@type": "PropertyValue", 
      "name": "Virtual Card",
      "value": isVirtual ? "Yes" : "No"
    },
    {
      "@type": "PropertyValue",
      "name": "Physical Card", 
      "value": isPhysical ? "Yes" : "No"
    }
  ]
};
---

<Layout title={title || `${name} - 全球虚拟信用卡评测`}>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-indigo-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Hero Section with Card Image -->
      <div class="bg-white rounded-3xl shadow-2xl overflow-hidden mb-12">
        <div class="relative">
          <!-- Background Gradient -->
          <div class="absolute inset-0 bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-500"></div>
          
          <!-- Content Container -->
          <div class="relative p-8 lg:p-12">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
              
              <!-- Left: Card Info -->
              <div class="text-white">
                <div class="flex flex-wrap items-center gap-3 mb-6">
                  <span class={`px-4 py-2 rounded-full text-sm font-semibold ${
                    cardType === 'visa' ? 'bg-blue-500 text-white' :
                    cardType === 'mastercard' ? 'bg-red-500 text-white' :
                    'bg-gray-500 text-white'
                  }`}>
                    {cardType?.toUpperCase()}
                  </span>
                  {isVirtual && (
                    <span class="px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-sm font-medium">
                      虚拟卡
                    </span>
                  )}
                  {isPhysical && (
                    <span class="px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-sm font-medium">
                      实体卡
                    </span>
                  )}
                </div>
                
                <h1 class="text-4xl lg:text-5xl font-bold mb-4">{name}</h1>
                <p class="text-xl text-white/90 leading-relaxed mb-8">{description}</p>
                
                <!-- CTA Button -->
                {affiliateLink && (
                  <a 
                    href={affiliateLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-8 py-4 bg-white text-indigo-600 font-bold rounded-2xl hover:bg-gray-100 transition-all transform hover:scale-105 shadow-lg"
                  >
                    立即申请
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                    </svg>
                  </a>
                )}
              </div>
              
              <!-- Right: Card Visual -->
              <div class="relative">
                <!-- 推荐标签 -->
                <div class="absolute -top-4 -right-4 bg-green-500 text-white px-4 py-2 rounded-full text-sm font-semibold shadow-lg z-10">
                  推荐
                </div>
                
                <!-- 信用卡设计 -->
                <div class="relative w-96 h-60 rounded-2xl shadow-2xl transform rotate-3 hover:rotate-0 transition-all duration-300 hover:scale-105">
                  <!-- 卡片背景渐变 -->
                  <div class="absolute inset-0 bg-gradient-to-br from-gray-800 via-gray-900 to-purple-900 rounded-2xl"></div>
                  
                  <!-- 装饰性圆形背景 -->
                  <div class="absolute top-8 right-8 w-32 h-32 bg-gradient-to-br from-purple-400/20 to-transparent rounded-full"></div>
                  <div class="absolute -bottom-4 -left-4 w-24 h-24 bg-gradient-to-br from-pink-400/10 to-transparent rounded-full"></div>
                  
                  <!-- 卡片内容 -->
                  <div class="relative z-10 p-8 h-full flex flex-col justify-between text-white">
                    <!-- 顶部：芯片和VISA标志 -->
                    <div class="flex justify-between items-start">
                      <!-- 芯片 -->
                      <div class="w-12 h-9 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-md shadow-inner"></div>
                      <!-- VISA标志 -->
                      <div class="text-2xl font-bold text-white/90 tracking-wider">
                        {cardType === 'visa' ? 'VISA' : 
                         cardType === 'mastercard' ? 'MasterCard' : 
                         cardType?.toUpperCase()}
                      </div>
                    </div>
                    
                    <!-- 中部：卡号 -->
                    <div class="space-y-6">
                      <div class="font-mono text-2xl tracking-wider">
                        •••• •••• •••• ••••
                      </div>
                    </div>
                    
                    <!-- 底部：持卡人和有效期 -->
                    <div class="flex justify-between items-end">
                      <div>
                        <div class="text-xs text-gray-400 mb-1">CARD HOLDER</div>
                        <div class="font-semibold text-lg">{name && name.length > 12 ? name.substring(0, 12) + '...' : name}</div>
                      </div>
                      <div>
                        <div class="text-xs text-gray-400 mb-1">VALID THRU</div>
                        <div class="font-mono text-lg">••/••</div>
                      </div>
                    </div>
                  </div>
                  
                  <!-- 光泽效果 -->
                  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent rounded-2xl transform -skew-x-12 -translate-x-full animate-pulse"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-8">
          
          <!-- Markdown Content -->
          <section class="bg-white rounded-3xl shadow-xl p-8">
            <div class="prose prose-lg max-w-none">
              <Content />
            </div>
          </section>
          
          <!-- 支持的加密货币 -->
          <section class="bg-white rounded-3xl shadow-xl p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-8">支持的加密货币</h2>
            {supportedCurrencies && supportedCurrencies.length > 0 ? (
              <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                {supportedCurrencies.map((currency) => (
                  <div class="flex items-center p-4 bg-gradient-to-r from-indigo-50 to-purple-50 rounded-xl border border-indigo-100">
                    <div class="w-10 h-10 bg-indigo-600 rounded-full flex items-center justify-center text-white font-bold mr-3">
                      {currency.substring(0, 2)}
                    </div>
                    <span class="font-medium text-gray-800">{currency}</span>
                  </div>
                ))}
              </div>
            ) : (
              <p class="text-gray-600">支持多种主流加密货币</p>
            )}
          </section>

          <!-- 新增：支持的支付方式模块 -->
          {supportedPaymentMethods && supportedPaymentMethods.length > 0 && (
            <section class="bg-white rounded-3xl shadow-xl p-8">
              <h2 class="text-3xl font-bold text-gray-900 mb-8 flex items-center">
                <svg class="w-8 h-8 mr-3 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                </svg>
                支持的支付方式
              </h2>
              <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                {supportedPaymentMethods.map((method) => {
                  // 根据支付方式显示不同的图标和颜色
                  const getPaymentMethodIcon = (method: string) => {
                    const methodLower = method.toLowerCase();
                    if (methodLower.includes('alipay')) {
                      return {
                        color: 'from-blue-500 to-cyan-500',
                        bgColor: 'from-blue-50 to-cyan-50',
                        borderColor: 'border-blue-200',
                        icon: '支'
                      };
                    } else if (methodLower.includes('apple') || methodLower.includes('applepay')) {
                      return {
                        color: 'from-gray-700 to-black',
                        bgColor: 'from-gray-50 to-gray-100',
                        borderColor: 'border-gray-200',
                        icon: ''
                      };
                    } else if (methodLower.includes('google') || methodLower.includes('googlepay')) {
                      return {
                        color: 'from-red-500 to-yellow-500',
                        bgColor: 'from-red-50 to-yellow-50',
                        borderColor: 'border-red-200',
                        icon: 'G'
                      };
                    } else if (methodLower.includes('wechat') || methodLower.includes('微信')) {
                      return {
                        color: 'from-green-500 to-green-600',
                        bgColor: 'from-green-50 to-green-100',
                        borderColor: 'border-green-200',
                        icon: '微'
                      };
                    } else if (methodLower.includes('paypal')) {
                      return {
                        color: 'from-blue-600 to-blue-700',
                        bgColor: 'from-blue-50 to-blue-100',
                        borderColor: 'border-blue-200',
                        icon: 'P'
                      };
                    } else {
                      return {
                        color: 'from-purple-500 to-indigo-500',
                        bgColor: 'from-purple-50 to-indigo-50',
                        borderColor: 'border-purple-200',
                        icon: method.substring(0, 1).toUpperCase()
                      };
                    }
                  };

                  const methodStyle = getPaymentMethodIcon(method);
                  
                  return (
                    <div class={`flex flex-col items-center p-4 bg-gradient-to-br ${methodStyle.bgColor} rounded-xl border ${methodStyle.borderColor} hover:scale-105 transition-transform`}>
                      <div class={`w-12 h-12 bg-gradient-to-br ${methodStyle.color} rounded-full flex items-center justify-center text-white font-bold mb-3 shadow-lg`}>
                        {methodStyle.icon || (
                          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                          </svg>
                        )}
                      </div>
                      <span class="font-medium text-gray-800 text-center text-sm">{method}</span>
                    </div>
                  );
                })}
              </div>
            </section>
          )}

          <!-- 优化后的手续费信息模块 -->
          <section class="bg-white rounded-3xl shadow-xl p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-8">费用详情</h2>
            
            <!-- 卡片费用 -->
            <div class="mb-8">
              <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                <svg class="w-6 h-6 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                </svg>
                卡片费用
              </h3>
              <div class="grid md:grid-cols-2 gap-4">
                {isVirtual && (
                  <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-2xl p-5 border border-blue-100">
                    <div class="flex justify-between items-start">
                      <div>
                        <p class="text-sm text-gray-600 mb-1">虚拟卡费用</p>
                        <p class="text-2xl font-bold text-gray-900">
                          {virtualCardPrice === 0 ? '免费' : `$${virtualCardPrice}`}
                        </p>
                      </div>
                      <div class="p-2 bg-white rounded-lg">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                      </div>
                    </div>
                  </div>
                )}
                {/* 修复实体卡费用显示逻辑 */}
                <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-2xl p-5 border border-purple-100">
                  <div class="flex justify-between items-start">
                    <div>
                      <p class="text-sm text-gray-600 mb-1">实体卡费用</p>
                      <p class="text-2xl font-bold text-gray-900">
                        {!isPhysical 
                          ? '暂未提供实体卡' 
                          : physicalCardPrice === 0 || physicalCardPrice === null || physicalCardPrice === undefined
                          ? '免费' 
                          : `$${physicalCardPrice}`
                        }
                      </p>
                      {isPhysical && atmFee && (
                        <p class="text-xs text-gray-500 mt-2">
                          ATM取现: {atmFee}
                        </p>
                      )}
                    </div>
                    <div class="p-2 bg-white rounded-lg">
                      <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                      </svg>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- 交易费用 -->
            <div class="mb-8">
              <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                <svg class="w-6 h-6 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                交易费用
              </h3>
              <div class="space-y-3">
                <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors">
                  <span class="text-gray-700 font-medium">充值费用</span>
                  <span class="font-bold text-gray-900">{depositFee || '免费'}</span>
                </div>
                <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors">
                  <span class="text-gray-700 font-medium">交易手续费</span>
                  <span class="font-bold text-gray-900">{transactionFee || '0.9%'}</span>
                </div>
                <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors">
                  <span class="text-gray-700 font-medium">提现费用</span>
                  <span class="font-bold text-gray-900">{withdrawalFee || '€0.90/次'}</span>
                </div>
              </div>
            </div>

            <!-- 年费信息 -->
            {annualFee !== undefined && (
              <div class="mt-6 p-4 bg-gradient-to-r from-yellow-50 to-orange-50 rounded-xl border border-yellow-200">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span class="text-gray-700 font-medium">年费</span>
                  </div>
                  <span class={`font-bold ${annualFee ? 'text-orange-600' : 'text-green-600'}`}>
                    {annualFee ? '收费' : '免费'}
                  </span>
                </div>
              </div>
            )}
          </section>

          <!-- 修改后的Limits模块 - 增加ATM取款限额 -->
          {limits && (
            <section class="bg-white rounded-3xl shadow-xl p-8">
              <h2 class="text-3xl font-bold text-gray-900 mb-8">消费限额</h2>
              <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                {limits.dailySpending && (
                  <div class="p-5 bg-gradient-to-br from-indigo-50 to-blue-50 rounded-2xl border border-indigo-100">
                    <div class="flex items-start justify-between">
                      <div>
                        <p class="text-sm text-gray-600 mb-1">每日消费限额</p>
                        <p class="text-2xl font-bold text-indigo-600">{limits.dailySpending}</p>
                      </div>
                      <svg class="w-8 h-8 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                    </div>
                  </div>
                )}
                {limits.monthlySpending && (
                  <div class="p-5 bg-gradient-to-br from-purple-50 to-pink-50 rounded-2xl border border-purple-100">
                    <div class="flex items-start justify-between">
                      <div>
                        <p class="text-sm text-gray-600 mb-1">每月消费限额</p>
                        <p class="text-2xl font-bold text-purple-600">{limits.monthlySpending}</p>
                      </div>
                      <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                    </div>
                  </div>
                )}
                {(limits.singleTransaction || limits.perTransactionLimit || limits.transactionLimit || limits.singleTransactionLimit) && (
                  <div class="p-5 bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl border border-green-100">
                    <div class="flex items-start justify-between">
                      <div>
                        <p class="text-sm text-gray-600 mb-1">单笔交易限额</p>
                        <p class="text-2xl font-bold text-green-600">
                          {limits.singleTransaction || limits.perTransactionLimit || limits.transactionLimit || limits.singleTransactionLimit}
                        </p>
                      </div>
                      <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                    </div>
                  </div>
                )}
                {limits.monthlyAtmWithdrawal && (
                  <div class="p-5 bg-gradient-to-br from-orange-50 to-red-50 rounded-2xl border border-orange-100">
                    <div class="flex items-start justify-between">
                      <div>
                        <p class="text-sm text-gray-600 mb-1">ATM每月取现</p>
                        <p class="text-2xl font-bold text-orange-600">{limits.monthlyAtmWithdrawal}</p>
                      </div>
                      <svg class="w-8 h-8 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                      </svg>
                    </div>
                  </div>
                )}
                {/* 新增：ATM每日取现限额 */}
                {limits.dailyAtmWithdrawal && (
                  <div class="p-5 bg-gradient-to-br from-yellow-50 to-amber-50 rounded-2xl border border-yellow-100">
                    <div class="flex items-start justify-between">
                      <div>
                        <p class="text-sm text-gray-600 mb-1">ATM每日取现</p>
                        <p class="text-2xl font-bold text-yellow-600">{limits.dailyAtmWithdrawal}</p>
                      </div>
                      <svg class="w-8 h-8 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v2a2 2 0 002 2z"/>
                      </svg>
                    </div>
                  </div>
                )}
                {/* ATM取现总限额 */}
                {limits.atmWithdrawalLimit && (
                  <div class="p-5 bg-gradient-to-br from-teal-50 to-cyan-50 rounded-2xl border border-teal-100">
                    <div class="flex items-start justify-between">
                      <div>
                        <p class="text-sm text-gray-600 mb-1">ATM取现总限额</p>
                        <p class="text-2xl font-bold text-teal-600">{limits.atmWithdrawalLimit}</p>
                      </div>
                      <svg class="w-8 h-8 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                    </div>
                  </div>
                )}
              </div>
            </section>
          )}

          <!-- Pros and Cons -->
          <section class="bg-white rounded-3xl shadow-xl p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-8">优缺点分析</h2>
            <div class="grid md:grid-cols-2 gap-8">
              <!-- Pros -->
              {pros && pros.length > 0 && (
                <div>
                  <h3 class="text-xl font-semibold text-green-600 mb-4 flex items-center">
                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    优点
                  </h3>
                  <ul class="space-y-3">
                    {pros.map((pro) => (
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        <span class="text-gray-700">{pro}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}
              
              <!-- Cons -->
              {cons && cons.length > 0 && (
                <div>
                  <h3 class="text-xl font-semibold text-red-600 mb-4 flex items-center">
                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    缺点
                  </h3>
                  <ul class="space-y-3">
                    {cons.map((con) => (
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-red-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                        </svg>
                        <span class="text-gray-700">{con}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}
            </div>
          </section>

          <!-- Features -->
          {features && features.length > 0 && (
            <section class="bg-white rounded-3xl shadow-xl p-8">
              <h2 class="text-3xl font-bold text-gray-900 mb-8">特色功能</h2>
              <div class="grid md:grid-cols-2 gap-4">
                {features.map((feature) => (
                  <div class="flex items-center p-4 bg-indigo-50 rounded-xl">
                    <svg class="w-6 h-6 text-indigo-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span class="text-gray-800 font-medium">{feature}</span>
                  </div>
                ))}
              </div>
            </section>
          )}

          <!-- 新增：相关文章推荐模块 -->
          {relatedArticles && relatedArticles.length > 0 && (
            <section class="bg-white rounded-3xl shadow-xl p-8">
              <h2 class="text-3xl font-bold text-gray-900 mb-8 flex items-center">
                <svg class="w-8 h-8 mr-3 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
                使用教程与相关指南
              </h2>
              
              <div class="grid md:grid-cols-2 gap-6">
                {relatedArticles.map((article) => (
                  <a 
                    href={`/articles/${article.slug}`}
                    class="group block bg-gradient-to-br from-indigo-50 to-purple-50 rounded-2xl p-6 border border-indigo-100 hover:shadow-lg transition-all duration-300 hover:scale-105"
                  >
                    <div class="flex items-start space-x-4">
                      <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
                          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                          </svg>
                        </div>
                      </div>
                      <div class="flex-1">
                        <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-indigo-600 transition-colors">
                          {article.data.title}
                        </h3>
                        <p class="text-sm text-gray-600 line-clamp-2">
                          {article.data.description}
                        </p>
                        <div class="mt-3 flex items-center text-indigo-600 text-sm font-medium">
                          阅读更多
                          <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                          </svg>
                        </div>
                      </div>
                    </div>
                  </a>
                ))}
              </div>
            </section>
          )}

          <!-- Giscus Comments Section -->
          <GiscusComments title={`${name} 用户评论`} />
        </div>

        <!-- Sidebar -->
        <div class="space-y-8">
          <!-- Quick Info Card -->
          <div class="bg-white rounded-3xl shadow-xl p-8 sticky top-24">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">基本信息</h3>
            
            <div class="space-y-4">
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <span class="text-gray-600">发卡机构</span>
                <span class="font-medium text-gray-900">{issuer}</span>
              </div>
              
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <span class="text-gray-600">卡片类型</span>
                <span class={`px-3 py-1 rounded-full text-xs font-medium ${
                  cardType === 'visa' ? 'bg-blue-100 text-blue-800' :
                  cardType === 'mastercard' ? 'bg-red-100 text-red-800' :
                  'bg-gray-100 text-gray-800'
                }`}>
                  {cardType?.toUpperCase()}
                </span>
              </div>
              
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <span class="text-gray-600">支持地区</span>
                <span class="font-medium text-gray-900">
                  {supportedRegions && supportedRegions.length > 0 ? 
                    supportedRegions.slice(0, 2).join(', ') : 
                    '全球'}
                </span>
              </div>
              
              {rewards && rewards.cashback && (
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                  <span class="text-gray-600">返现比例</span>
                  <span class="font-medium text-green-600">{rewards.cashback}</span>
                </div>
              )}
              
              <div class="flex justify-between items-center py-2">
                <span class="text-gray-600">年费</span>
                <span class={`font-medium ${annualFee ? 'text-red-600' : 'text-green-600'}`}>
                  {annualFee ? '收费' : '免费'}
                </span>
              </div>
            </div>
            
            <!-- Apply Button -->
            {affiliateLink && (
              <a 
                href={affiliateLink}
                target="_blank"
                rel="noopener noreferrer"
                class="mt-6 w-full inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-medium rounded-2xl hover:from-indigo-700 hover:to-purple-700 transition-all transform hover:scale-105"
              >
                立即申请
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            )}
          </div>

          <!-- Related Cards -->
          {relatedCards && relatedCards.length > 0 && (
            <div class="bg-white rounded-3xl shadow-xl p-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-6">相关U卡推荐</h3>
              <div class="space-y-4">
                {relatedCards.map((relatedCard) => (
                  <a 
                    href={`/cards/${relatedCard.slug}`}
                    class="block p-4 bg-gray-50 rounded-xl hover:bg-indigo-50 transition-colors"
                  >
                    <div class="flex items-center justify-between">
                      <div>
                        <h4 class="font-semibold text-gray-900">{relatedCard.data.name}</h4>
                        <p class="text-sm text-gray-600 mt-1">{relatedCard.data.cardType?.toUpperCase()}</p>
                      </div>
                      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</Layout>