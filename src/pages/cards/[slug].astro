---
// src/pages/cards/[...slug].astro
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const cards = await getCollection('cards');
  return cards.map((card) => ({
    params: { slug: card.slug },
    props: card,
  }));
}

type Props = CollectionEntry<'cards'>;

const card = Astro.props;
const { title, name, description, rating, cardType, isVirtual, isPhysical, pros, cons, features, limits, rewards, issuer, supportedRegions, supportedCurrencies, virtualCardPrice, physicalCardPrice, depositFee, transactionFee, withdrawalFee, atmFee, annualFee, affiliateLink } = card.data;

// 获取相关U卡
let relatedCards = [];
if (card.data.relatedCards) {
  const allCards = await getCollection('cards');
  relatedCards = allCards.filter(c => 
    card.data.relatedCards?.includes(c.slug) && c.slug !== card.slug
  ).slice(0, 3);
}

// 渲染Markdown内容
const { Content } = await card.render();

// 生成结构化数据
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": name,
  "description": description,
  "brand": {
    "@type": "Brand",
    "name": issuer
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": rating,
    "bestRating": "5",
    "worstRating": "1"
  },
  "offers": {
    "@type": "Offer",
    "price": virtualCardPrice || physicalCardPrice || "0",
    "priceCurrency": "USD",
    "availability": "https://schema.org/InStock"
  },
  "category": "Financial Services",
  "additionalProperty": [
    {
      "@type": "PropertyValue",
      "name": "Card Type",
      "value": cardType
    },
    {
      "@type": "PropertyValue", 
      "name": "Virtual Card",
      "value": isVirtual ? "Yes" : "No"
    },
    {
      "@type": "PropertyValue",
      "name": "Physical Card", 
      "value": isPhysical ? "Yes" : "No"
    }
  ]
};
---

<Layout 
  title={`${name} - 详细评测 | U卡评测`}
  description={description}
  structuredData={structuredData}
>
  <div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100">
    <!-- Breadcrumb -->
    <nav class="bg-white/80 backdrop-blur-sm border-b border-gray-200 sticky top-0 z-40">
      <div class="max-w-7xl mx-auto px-6 lg:px-8 py-4">
        <div class="flex items-center space-x-2 text-sm text-gray-600">
          <a href="/" class="hover:text-indigo-600 transition-colors">首页</a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
          <a href="/cards" class="hover:text-indigo-600 transition-colors">U卡评测</a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
          <span class="text-gray-900 font-medium">{name}</span>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-gradient-to-br from-indigo-600 via-purple-600 to-blue-700 py-16">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(255,255,255,0.1),transparent_70%)]"></div>
      
      <div class="max-w-7xl mx-auto px-6 lg:px-8 relative">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Left Content -->
          <div class="text-white">
            <!-- Card Type Badge -->
            <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/20 backdrop-blur-sm border border-white/30 text-white/90 text-sm font-medium mb-6">
              <span class={`w-8 h-5 rounded-sm mr-2 ${cardType === 'visa' ? 'bg-blue-600' : 'bg-red-600'}`}></span>
              {cardType?.toUpperCase()} Card
            </div>

            <h1 class="text-5xl lg:text-6xl font-bold mb-6 leading-tight">
              {name}
            </h1>
            
            <p class="text-xl text-white/90 mb-8 leading-relaxed max-w-2xl">
              {description}
            </p>

            <!-- Rating -->
            <div class="flex items-center mb-8">
              <div class="flex items-center mr-4">
                {[...Array(5)].map((_, i) => (
                  <svg class={`w-6 h-6 ${i < Math.floor(rating) ? 'text-yellow-400' : 'text-white/30'}`} fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                ))}
              </div>
              <span class="text-2xl font-bold text-yellow-400 mr-2">{rating}</span>
              <span class="text-white/80">/ 5.0</span>
            </div>

            <!-- CTA Button -->
            <a 
              href={affiliateLink}
              target="_blank"
              class="inline-flex items-center px-8 py-4 bg-white text-indigo-600 rounded-2xl font-bold text-lg hover:bg-gray-50 transform hover:-translate-y-1 transition-all duration-300 shadow-2xl hover:shadow-3xl"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
              </svg>
              立即申请
            </a>
          </div>

          <!-- Right Content - Card Info Grid -->
          <div class="space-y-4">
            <div class="grid grid-cols-2 gap-4">
              <!-- Card Types -->
              <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
                <h3 class="text-white/80 text-sm font-medium mb-2">支持类型</h3>
                <div class="space-y-2">
                  {isVirtual && (
                    <div class="flex items-center text-white">
                      <span class="w-2 h-2 bg-green-400 rounded-full mr-2"></span>
                      虚拟卡
                      {virtualCardPrice && <span class="ml-auto">${virtualCardPrice}</span>}
                    </div>
                  )}
                  {isPhysical && (
                    <div class="flex items-center text-white">
                      <span class="w-2 h-2 bg-blue-400 rounded-full mr-2"></span>
                      实体卡
                      {physicalCardPrice && <span class="ml-auto">${physicalCardPrice}</span>}
                    </div>
                  )}
                </div>
              </div>

              <!-- Annual Fee -->
              <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
                <h3 class="text-white/80 text-sm font-medium mb-2">年费</h3>
                <div class={`text-2xl font-bold ${annualFee ? 'text-red-400' : 'text-green-400'}`}>
                  {annualFee ? '收取' : '免费'}
                </div>
              </div>

              <!-- Fees -->
              <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
                <h3 class="text-white/80 text-sm font-medium mb-2">主要费用</h3>
                <div class="space-y-1 text-sm text-white">
                  <div>充值: {depositFee}</div>
                  <div>交易: {transactionFee}</div>
                </div>
              </div>

              <!-- Currencies -->
              <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
                <h3 class="text-white/80 text-sm font-medium mb-2">支持货币</h3>
                <div class="text-2xl font-bold text-white">
                  {supportedCurrencies?.length || 0}+
                </div>
                <div class="text-xs text-white/70 mt-1">种货币</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-6 lg:px-8 py-16">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Main Content Column -->
        <div class="lg:col-span-2 space-y-12">
          <!-- Detailed Review -->
          <section class="bg-white rounded-3xl shadow-xl p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-6">详细评测</h2>
            <div class="prose prose-lg max-w-none prose-indigo">
              <Content />
            </div>
          </section>

          <!-- Pros and Cons -->
          <section class="bg-white rounded-3xl shadow-xl p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-8">优缺点分析</h2>
            
            <div class="grid md:grid-cols-2 gap-8">
              <!-- Pros -->
              <div>
                <h3 class="text-xl font-bold text-green-600 mb-4 flex items-center">
                  <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  优点
                </h3>
                <ul class="space-y-3">
                  {pros?.map((pro) => (
                    <li class="flex items-start">
                      <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                      </svg>
                      <span class="text-gray-700">{pro}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <!-- Cons -->
              <div>
                <h3 class="text-xl font-bold text-red-600 mb-4 flex items-center">
                  <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  缺点
                </h3>
                <ul class="space-y-3">
                  {cons?.map((con) => (
                    <li class="flex items-start">
                      <svg class="w-5 h-5 text-red-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                      </svg>
                      <span class="text-gray-700">{con}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </section>

          <!-- Features -->
          {features && features.length > 0 && (
            <section class="bg-white rounded-3xl shadow-xl p-8">
              <h2 class="text-3xl font-bold text-gray-900 mb-8">特色功能</h2>
              <div class="grid md:grid-cols-2 gap-4">
                {features.map((feature) => (
                  <div class="flex items-center p-4 bg-indigo-50 rounded-xl">
                    <svg class="w-6 h-6 text-indigo-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span class="text-gray-800 font-medium">{feature}</span>
                  </div>
                ))}
              </div>
            </section>
          )}

          <!-- Comments Section -->
          <section class="bg-white rounded-3xl shadow-xl p-8">
            <div class="flex items-center justify-between mb-8">
              <h2 class="text-3xl font-bold text-gray-900">用户评论</h2>
              <div class="flex items-center text-sm text-gray-500">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
                由 GitHub Discussions 支持
              </div>
            </div>
            
            <!-- Comments Instructions -->
            <div class="bg-blue-50 rounded-xl p-6 mb-8 border border-blue-200">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div>
                  <h3 class="text-lg font-semibold text-blue-900 mb-2">参与讨论</h3>
                  <p class="text-blue-800 text-sm mb-3">
                    欢迎分享您使用 <strong>{name}</strong> 的真实体验，帮助其他用户做出更好的选择。
                  </p>
                  <ul class="text-blue-700 text-sm space-y-1">
                    <li>• 需要GitHub账号才能评论</li>
                    <li>• 请保持文明友善的讨论环境</li>
                    <li>• 分享真实体验，避免恶意评价</li>
                  </ul>
                </div>
              </div>
            </div>

            <!-- Giscus Comments -->
            <div id="comments-container" class="min-h-[400px]">
              <!-- 评论系统将在这里加载 -->
            </div>
          </section>
        </div>

        <!-- Sidebar -->
        <div class="space-y-8">
          <!-- Quick Info Card -->
          <div class="bg-white rounded-3xl shadow-xl p-8 sticky top-24">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">基本信息</h3>
            
            <div class="space-y-4">
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <span class="text-gray-600">发卡机构</span>
                <span class="font-medium text-gray-900">{issuer}</span>
              </div>
              
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <span class="text-gray-600">卡片类型</span>
                <span class={`px-3 py-1 rounded-full text-xs font-medium ${
                  cardType === 'visa' ? 'bg-blue-100 text-blue-800' : 'bg-red-100 text-red-800'
                }`}>
                  {cardType?.toUpperCase()}
                </span>
              </div>
              
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <span class="text-gray-600">充值费用</span>
                <span class="font-medium text-gray-900">{depositFee}</span>
              </div>
              
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <span class="text-gray-600">交易费用</span>
                <span class="font-medium text-gray-900">{transactionFee}</span>
              </div>
              
              {withdrawalFee && (
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                  <span class="text-gray-600">提现费用</span>
                  <span class="font-medium text-gray-900">{withdrawalFee}</span>
                </div>
              )}
              
              {atmFee && (
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                  <span class="text-gray-600">ATM费用</span>
                  <span class="font-medium text-gray-900">{atmFee}</span>
                </div>
              )}
              
              <div class="flex justify-between items-center py-2">
                <span class="text-gray-600">支持地区</span>
                <span class="font-medium text-gray-900">{supportedRegions?.length || 0}+ 个地区</span>
              </div>
            </div>

            <div class="mt-8">
              <a 
                href={affiliateLink}
                target="_blank"
                class="w-full inline-flex items-center justify-center px-6 py-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-2xl font-bold hover:from-indigo-700 hover:to-purple-700 transform hover:-translate-y-1 transition-all duration-300 shadow-lg hover:shadow-xl"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                </svg>
                立即申请
              </a>
            </div>
          </div>

          <!-- Limits Info -->
          {limits && (
            <div class="bg-white rounded-3xl shadow-xl p-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-6">限额信息</h3>
              <div class="space-y-4">
                {limits.dailySpending && (
                  <div class="flex justify-between items-center py-2 border-b border-gray-100">
                    <span class="text-gray-600">日消费限额</span>
                    <span class="font-medium text-gray-900">{limits.dailySpending}</span>
                  </div>
                )}
                {limits.monthlySpending && (
                  <div class="flex justify-between items-center py-2 border-b border-gray-100">
                    <span class="text-gray-600">月消费限额</span>
                    <span class="font-medium text-gray-900">{limits.monthlySpending}</span>
                  </div>
                )}
                {limits.atmWithdrawal && (
                  <div class="flex justify-between items-center py-2 border-b border-gray-100">
                    <span class="text-gray-600">ATM单次限额</span>
                    <span class="font-medium text-gray-900">{limits.atmWithdrawal}</span>
                  </div>
                )}
                {limits.monthlyAtmWithdrawal && (
                  <div class="flex justify-between items-center py-2">
                    <span class="text-gray-600">ATM月限额</span>
                    <span class="font-medium text-gray-900">{limits.monthlyAtmWithdrawal}</span>
                  </div>
                )}
              </div>
            </div>
          )}

          <!-- Rewards Info -->
          {rewards && (rewards.cashback || rewards.loyaltyProgram) && (
            <div class="bg-white rounded-3xl shadow-xl p-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-6">奖励计划</h3>
              <div class="space-y-4">
                {rewards.cashback && (
                  <div class="p-4 bg-green-50 rounded-xl">
                    <div class="flex items-center mb-2">
                      <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                      </svg>
                      <span class="font-semibold text-green-800">现金回馈</span>
                    </div>
                    <p class="text-green-700">{rewards.cashback}</p>
                  </div>
                )}
                {rewards.loyaltyProgram && (
                  <div class="p-4 bg-purple-50 rounded-xl">
                    <div class="flex items-center mb-2">
                      <svg class="w-5 h-5 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                      <span class="font-semibold text-purple-800">忠诚度计划</span>
                    </div>
                    <p class="text-purple-700">{rewards.loyaltyProgram}</p>
                  </div>
                )}
              </div>
            </div>
          )}

          <!-- Supported Currencies -->
          {supportedCurrencies && supportedCurrencies.length > 0 && (
            <div class="bg-white rounded-3xl shadow-xl p-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-6">支持货币</h3>
              <div class="flex flex-wrap gap-2">
                {supportedCurrencies.map((currency) => (
                  <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">
                    {currency}
                  </span>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    </div>

    <!-- Related Cards -->
    {relatedCards.length > 0 && (
      <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <h2 class="text-4xl font-bold text-gray-900 text-center mb-12">相关推荐</h2>
          
          <div class="grid md:grid-cols-3 gap-8">
            {relatedCards.map((relatedCard) => (
              <div class="bg-white rounded-2xl shadow-xl hover:shadow-2xl transform hover:-translate-y-2 transition-all duration-300 overflow-hidden border border-gray-100">
                <div class="h-48 bg-gradient-to-br from-indigo-400 to-purple-500 relative">
                  <div class="absolute top-4 left-4">
                    <span class={`px-3 py-1 rounded-full text-xs font-medium ${
                      relatedCard.data.cardType === 'visa' ? 'bg-blue-100 text-blue-800' : 'bg-red-100 text-red-800'
                    }`}>
                      {relatedCard.data.cardType?.toUpperCase()}
                    </span>
                  </div>
                  <div class="absolute bottom-4 right-4 flex items-center text-white">
                    <span class="text-2xl font-bold mr-1">{relatedCard.data.rating}</span>
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  </div>
                </div>
                
                <div class="p-6">
