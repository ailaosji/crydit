    if (otherCard.data.network === network) score += 3;
    const cardTags = (cardData.tags || []) as string[];
    const otherTags = (otherCard.data.tags || []) as string[];
    const commonTags = cardTags.filter((tag: string) => otherTags.includes(tag));
    score += commonTags.length * 2;
    const cardCurrencies = (supportedCurrencies || []) as string[];
    const otherCurrencies = (otherCard.data.supportedCurrencies || []) as string[];
    const commonCurrencies = cardCurrencies.filter((currency: string) => otherCurrencies.includes(currency));
    score += commonCurrencies.length;
    if (otherCard.data.issuer === issuer) score -= 10;
    return { card: otherCard, score };
