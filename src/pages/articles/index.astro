---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import ArticleList from '../../components/ArticleList.tsx';
import { CARD_CATEGORIES } from '../../constants';

const allArticles = await getCollection('articles');
allArticles.sort(
  (a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
);

// 获取文章分类统计
const categories = Object.fromEntries(
  Object.values(CARD_CATEGORIES).map((cat) => [cat.value, { ...cat, count: 0 }])
);

allArticles.forEach((article) => {
  if (categories[article.data.category]) {
    categories[article.data.category].count++;
  }
});

// 获取热门文章（可以根据实际的浏览量或评论数）
const featuredArticles = allArticles.slice(0, 3);

const categoryStyles = {
  news: 'bg-red-100 text-red-800',
  guide: 'bg-blue-100 text-blue-800',
  review: 'bg-green-100 text-green-800',
  analysis: 'bg-purple-100 text-purple-800',
  tutorial: 'bg-teal-100 text-teal-800',
};
---

<Layout title="最新文章 - U卡深度评测与使用指南">
  <div class="min-h-screen bg-gradient-to-br from-gray-50 via-purple-50/30 to-indigo-50/30">
    <!-- Hero Section with Modern Design -->
    <section class="relative overflow-hidden">
      <!-- 背景装饰 -->
      <div
        class="absolute inset-0 bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-500 opacity-90"
      >
      </div>
      <div
        class="bg-[url('data:image/svg+xml,%3Csvg width= absolute inset-0"
        60"
        height="60"
        viewBox="0 0 60 60"
        xmlns="http://www.w3.org/2000/svg"
        %3E%3Cg
        fill="none"
        fill-rule="evenodd"
        %3E%3Cg
        fill="%239C92AC"
        fill-opacity="0.08"
        %3E%3Cpath
        d="M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z"
        %3E%3C
        g%3E%3C
        g%3E%3C
        svg%3E')]
        opacity-10"
      >
      </div>

      <div class="relative mx-auto max-w-7xl px-4 py-24 sm:px-6 lg:px-8">
        <div class="text-center">
          <div
            class="mb-6 inline-flex items-center justify-center rounded-2xl bg-white/20 p-3 backdrop-blur-md"
          >
            <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
              ></path>
            </svg>
          </div>

          <h1 class="mb-6 text-5xl font-bold text-white md:text-6xl">最新文章</h1>
          <p class="mx-auto max-w-3xl text-xl leading-relaxed text-white/90">
            深入了解加密货币卡片世界，获取专业评测、实用指南和市场洞察，助您做出明智决策
          </p>
        </div>

        <!-- 分类统计卡片 -->
        <div class="mt-12 grid grid-cols-2 gap-4 md:grid-cols-4">
          {
            Object.entries(categories).map(([key, cat]) => (
              <div class="rounded-2xl border border-white/20 bg-white/10 p-5 backdrop-blur-md transition-all duration-300 hover:scale-105 hover:bg-white/20">
                <div class="mb-2 flex items-center justify-between">
                  <span class="text-2xl">{cat.icon}</span>
                  <span class="text-2xl font-bold text-white">{cat.count}</span>
                </div>
                <p class="text-sm text-white/80">{cat.label}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Featured Articles Section -->
    {
      featuredArticles.length > 0 && (
        <section class="px-4 py-16 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-7xl">
            <div class="mb-8 flex items-center justify-between">
              <h2 class="text-3xl font-bold text-gray-900">精选推荐</h2>
              <div class="flex items-center text-indigo-600">
                <svg class="mr-1 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <span class="text-sm font-medium">编辑精选</span>
              </div>
            </div>

            <div class="grid gap-6 md:grid-cols-3">
              {featuredArticles.map((article, index) => (
                <article class="group relative overflow-hidden rounded-3xl bg-white shadow-lg transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl">
                  {/* 渐变背景 */}
                  <div
                    class={`absolute inset-0 bg-gradient-to-br ${
                      index === 0
                        ? 'from-indigo-500 to-purple-600'
                        : index === 1
                          ? 'from-purple-500 to-pink-600'
                          : 'from-pink-500 to-orange-600'
                    } opacity-5 transition-opacity group-hover:opacity-10`}
                  />

                  <div class="relative p-6">
                    {/* 分类标签 */}
                    <div class="mb-4 flex items-center justify-between">
                      <span
                        class={`inline-flex items-center rounded-full px-3 py-1 text-xs font-medium ${categoryStyles[article.data.category]}`}
                      >
                        {categories[article.data.category]?.icon}{' '}
                        {categories[article.data.category]?.label}
                      </span>
                      {index === 0 && (
                        <span class="inline-flex items-center rounded-full bg-yellow-100 px-2 py-1 text-xs font-medium text-yellow-800">
                          最新
                        </span>
                      )}
                    </div>

                    <h3 class="mb-3 line-clamp-2 text-xl font-bold text-gray-900 transition-colors group-hover:text-indigo-600">
                      <a href={`/articles/${article.slug}`}>{article.data.title}</a>
                    </h3>

                    <p class="mb-4 line-clamp-3 text-sm text-gray-600">
                      {article.data.description}
                    </p>

                    <div class="flex items-center justify-between">
                      <div class="flex items-center space-x-3 text-xs text-gray-500">
                        <span class="flex items-center">
                          <svg
                            class="mr-1 h-4 w-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                            />
                          </svg>
                          {new Date(article.data.publishDate).toLocaleDateString('zh-CN')}
                        </span>
                        <span class="flex items-center">
                          <svg
                            class="mr-1 h-4 w-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                            />
                          </svg>
                          {article.data.readingTime || '5'} 分钟
                        </span>
                      </div>

                      <a
                        href={`/articles/${article.slug}`}
                        class="text-indigo-600 transition-colors hover:text-indigo-700"
                      >
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 5l7 7-7 7"
                          />
                        </svg>
                      </a>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          </div>
        </section>
      )
    }

    <!-- Main Articles List -->
    <main class="px-4 py-12 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-5xl">
        <div class="rounded-3xl bg-white p-8 shadow-xl">
          <div class="mb-8 flex items-center justify-between">
            <h2 class="text-2xl font-bold text-gray-900">全部文章</h2>
            <div class="flex items-center space-x-2 text-sm text-gray-500">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
                ></path>
              </svg>
              <span>共 {allArticles.length} 篇文章</span>
            </div>
          </div>

          <!-- 文章列表组件 -->
          <ArticleList articles={allArticles} showAll={true} client:load />
        </div>
      </div>
    </main>

    <!-- Newsletter Section -->
    <section class="px-4 py-16 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-4xl">
        <div
          class="rounded-3xl bg-gradient-to-r from-indigo-600 to-purple-600 p-8 text-center shadow-2xl md:p-12"
        >
          <h3 class="mb-4 text-3xl font-bold text-white">订阅最新资讯</h3>
          <p class="mx-auto mb-8 max-w-2xl text-white/90">
            获取最新的U卡评测、市场分析和独家优惠信息，不错过任何重要更新
          </p>
          <div class="mx-auto flex max-w-md flex-col gap-4 sm:flex-row">
            <input
              type="email"
              placeholder="输入您的邮箱地址"
              class="flex-1 rounded-full px-6 py-3 text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-4 focus:ring-white/30"
            />
            <button
              class="rounded-full bg-white px-8 py-3 font-semibold text-indigo-600 transition-colors hover:bg-gray-100"
            >
              立即订阅
            </button>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
