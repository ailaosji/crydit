---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import ArticleList from '../../components/ArticleList.tsx';

const allArticles = await getCollection('articles');
allArticles.sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());
---

<Layout title="U卡评测文章 - 最新指南与深度分析">
  <div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-purple-600 to-indigo-700 py-20 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">U卡文章中心</h1>
        <p class="text-lg md:text-xl text-purple-100 max-w-3xl mx-auto">
          阅读我们的深度评测、使用指南和市场分析，做出更明智的决策。
        </p>
      </div>
    </section>

    <!-- Main Content -->
    <main class="py-12">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <ArticleList articles={allArticles} showAll={true} client:load />
      </div>
    </main>
  </div>
</Layout>
