---
// src/pages/exchanges/index.astro
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// 获取交易所数据
let allExchanges = [];
try {
  allExchanges = await getCollection('exchanges');
  // 按名称字母顺序排序（移除了ranking排序）
  allExchanges.sort((a, b) => a.data.name.localeCompare(b.data.name));
} catch (error) {
  console.warn('Exchanges collection not found, using demo data');
  // 演示数据（移除了ranking字段）
  allExchanges = [
    {
      slug: 'coinbase',
      data: {
        name: 'Coinbase',
        title: 'Coinbase - 美国最受信任的加密货币平台',
        description: '面向新手友好的交易所，在美国纳斯达克上市',
        logo: '/images/exchanges/coinbase.png',
        foundedYear: 2012,
        headquarters: '美国',
        tradingVolume24h: '$3.2B',
        numberOfCoins: 200,
        tradingFee: '0.5%',
        depositMethods: ['银行转账', '信用卡', 'PayPal'],
        withdrawalMethods: ['银行转账', 'PayPal', '加密货币'],
        features: ['简单买卖', '专业交易', '质押', '教育奖励'],
        supportedCountries: 50,
        kycRequired: true,
        website: 'https://www.coinbase.com',
        affiliateLink: '#',
        publishDate: new Date(),
        status: 'active',
      },
    },
    {
      slug: 'okx',
      data: {
        name: 'OKX',
        title: 'OKX - 快速安全的加密货币交易平台',
        description: '提供现货、期货、期权等多种交易产品的综合性平台',
        logo: '/images/exchanges/okx.png',
        foundedYear: 2017,
        headquarters: '塞舌尔',
        tradingVolume24h: '$15.6B',
        numberOfCoins: 300,
        tradingFee: '0.08%',
        depositMethods: ['银行转账', '信用卡', 'P2P', '加密货币'],
        withdrawalMethods: ['银行转账', 'P2P', '加密货币'],
        features: ['现货交易', '衍生品', 'DeFi', 'NFT', '交易机器人'],
        supportedCountries: 80,
        kycRequired: true,
        website: 'https://www.okx.com',
        affiliateLink: '#',
        publishDate: new Date(),
        status: 'active',
      },
    },
  ];
}
---

<Layout title="加密货币交易所列表 - 2025年专业评测">
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-600 to-indigo-700 py-20 text-white">
      <div class="mx-auto max-w-7xl px-4 text-center sm:px-6 lg:px-8">
        <div
          class="mb-8 inline-flex items-center rounded-full border border-white/30 bg-white/20 px-4 py-2 text-sm font-medium text-white/90 backdrop-blur-sm"
        >
          <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            ></path>
          </svg>
          专业评测
        </div>

        <h1 class="mb-4 text-4xl font-bold md:text-5xl">加密货币交易所评测</h1>
        <p class="mx-auto max-w-3xl text-lg text-blue-100 md:text-xl">
          深度分析全球主流加密货币交易所，帮助您找到最安全、最适合的交易平台
        </p>
      </div>
    </section>

    <!-- 统计信息 -->
    <section class="bg-white py-8 shadow-sm">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-2 gap-8 md:grid-cols-4">
          <div class="text-center">
            <div class="text-3xl font-bold text-indigo-600">{allExchanges.length}+</div>
            <div class="mt-1 text-sm text-gray-600">交易所评测</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-green-600">24/7</div>
            <div class="mt-1 text-sm text-gray-600">实时更新</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-purple-600">100+</div>
            <div class="mt-1 text-sm text-gray-600">评测维度</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-orange-600">专业</div>
            <div class="mt-1 text-sm text-gray-600">分析团队</div>
          </div>
        </div>
      </div>
    </section>

    <!-- 交易所列表 -->
    <main class="py-12">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
          <h2 class="mb-4 text-2xl font-bold text-gray-800">所有交易所</h2>
          <p class="text-gray-600">详细对比各大交易所的功能、费用和特点</p>
        </div>

        <!-- 交易所卡片网格 -->
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {
            allExchanges.map((exchange) => (
              <div class="overflow-hidden rounded-2xl bg-white shadow-lg transition-all duration-300 hover:shadow-2xl">
                {/* 卡片头部 */}
                <div class="bg-gradient-to-br from-blue-50 to-indigo-50 p-6">
                  <div class="mb-4 flex items-center justify-between">
                    <h3 class="text-xl font-bold text-gray-900">{exchange.data.name}</h3>
                    {exchange.data.status === 'active' && (
                      <span class="rounded-full bg-green-100 px-2 py-1 text-xs font-semibold text-green-700">
                        运营中
                      </span>
                    )}
                  </div>

                  <div class="flex items-center gap-4 text-sm text-gray-600">
                    <div class="flex items-center">
                      <svg
                        class="mr-1 h-4 w-4 text-gray-400"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                        />
                      </svg>
                      成立于 {exchange.data.foundedYear}
                    </div>
                    <div class="flex items-center">
                      <svg
                        class="mr-1 h-4 w-4 text-gray-400"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                        />
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                        />
                      </svg>
                      {exchange.data.headquarters}
                    </div>
                  </div>
                </div>

                {/* 卡片内容 */}
                <div class="p-6">
                  <p class="mb-4 line-clamp-2 text-sm text-gray-600">{exchange.data.description}</p>

                  {/* 关键指标 */}
                  <div class="mb-6 space-y-3">
                    <div class="flex items-center justify-between">
                      <span class="text-sm text-gray-500">24小时交易量</span>
                      <span class="text-sm font-semibold text-gray-900">
                        {exchange.data.tradingVolume24h}
                      </span>
                    </div>
                    <div class="flex items-center justify-between">
                      <span class="text-sm text-gray-500">支持币种</span>
                      <span class="text-sm font-semibold text-gray-900">
                        {exchange.data.numberOfCoins}+
                      </span>
                    </div>
                    <div class="flex items-center justify-between">
                      <span class="text-sm text-gray-500">交易手续费</span>
                      <span class="text-sm font-semibold text-gray-900">
                        {exchange.data.tradingFee}
                      </span>
                    </div>
                    <div class="flex items-center justify-between">
                      <span class="text-sm text-gray-500">覆盖国家</span>
                      <span class="text-sm font-semibold text-gray-900">
                        {exchange.data.supportedCountries}+
                      </span>
                    </div>
                  </div>

                  {/* 主要功能标签 */}
                  <div class="mb-6">
                    <p class="mb-2 text-xs text-gray-500">主要功能</p>
                    <div class="flex flex-wrap gap-1">
                      {exchange.data.features?.slice(0, 3).map((feature) => (
                        <span class="rounded bg-blue-50 px-2 py-1 text-xs text-blue-700">
                          {feature}
                        </span>
                      ))}
                      {exchange.data.features?.length > 3 && (
                        <span class="rounded bg-gray-100 px-2 py-1 text-xs text-gray-500">
                          +{exchange.data.features.length - 3}
                        </span>
                      )}
                    </div>
                  </div>

                  {/* 操作按钮 */}
                  <div class="flex gap-3">
                    <a
                      href={`/exchanges/${exchange.slug}`}
                      class="flex-1 rounded-lg bg-gradient-to-r from-indigo-600 to-blue-600 py-2 text-center text-sm font-semibold text-white transition-colors hover:from-indigo-700 hover:to-blue-700"
                    >
                      查看详情
                    </a>
                    <a
                      href={exchange.data.website}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex-1 rounded-lg border border-gray-300 py-2 text-center text-sm font-semibold text-gray-700 transition-colors hover:bg-gray-50"
                    >
                      访问官网
                    </a>
                  </div>
                </div>
              </div>
            ))
          }
        </div>

        {
          allExchanges.length === 0 && (
            <div class="py-12 text-center">
              <p class="text-gray-500">暂无交易所数据</p>
            </div>
          )
        }
      </div>
    </main>

    <!-- 提示说明 -->
    <section class="border-t border-yellow-100 bg-yellow-50 py-12">
      <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
        <div class="flex items-start space-x-3">
          <svg
            class="mt-1 h-6 w-6 flex-shrink-0 text-yellow-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div>
            <h3 class="mb-2 text-lg font-semibold text-gray-900">重要提示</h3>
            <p class="mb-2 text-sm text-gray-700">
              本页面提供的交易所信息仅供参考，不构成投资建议。加密货币交易具有高风险，请根据您的风险承受能力谨慎选择。
            </p>
            <p class="text-sm text-gray-700">
              建议在选择交易所前，详细了解其安全措施、监管合规情况、用户评价等信息，并始终注意保护您的账户安全。
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-gradient-to-r from-indigo-600 to-blue-600 py-16">
      <div class="mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
        <h2 class="mb-4 text-3xl font-bold text-white">需要更多帮助？</h2>
        <p class="mb-8 text-xl text-white/90">我们的专家团队可以为您提供个性化的交易所选择建议</p>
        <div class="flex flex-col justify-center gap-4 sm:flex-row">
          <a
            href="/guides"
            class="inline-flex items-center justify-center rounded-full bg-white px-8 py-3 font-semibold text-indigo-600 transition-colors hover:bg-gray-100"
          >
            查看使用指南
            <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
              ></path>
            </svg>
          </a>
          <a
            href="/contact"
            class="inline-flex items-center justify-center rounded-full border border-white/30 bg-white/20 px-8 py-3 font-semibold text-white backdrop-blur-sm transition-colors hover:bg-white/30"
          >
            联系专家
            <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>
