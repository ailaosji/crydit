---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import GiscusComments from '../../components/GiscusComments.astro';
import { CARD_CATEGORIES } from '../../constants';

// 获取所有文章用于生成静态路径
export async function getStaticPaths() {
  const articles = await getCollection('articles');
  // 只处理资讯类文章
  const newsArticles = articles.filter(article => article.data.category === 'news');

  return newsArticles.map((article) => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

interface Props {
  article: CollectionEntry<'articles'>;
}

const { article } = Astro.props;
const { Content } = await article.render();

// 获取当前文章的分类信息
const currentCategory = CARD_CATEGORIES.NEWS;

// 获取相关资讯（同分类的其他文章）
const allArticles = await getCollection('articles');
const relatedNews = allArticles
  .filter(a => a.data.category === 'news' && a.slug !== article.slug)
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .slice(0, 6);

// 获取热门文章
const hotArticles = allArticles
  .filter(a => a.data.featured && a.slug !== article.slug)
  .slice(0, 5);

// 格式化发布时间
const publishDate = new Date(article.data.publishDate);
const formattedDate = publishDate.toLocaleDateString('zh-CN', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// 计算阅读时间（假设每分钟阅读300字）
const wordCount = article.body.length;
const readingTime = Math.ceil(wordCount / 300);
---

<Layout
  title={`${article.data.title} - U卡资讯`}
  description={article.data.description}
  image={article.data.image}
>
  <div class="min-h-screen bg-gradient-to-br from-gray-50 via-blue-50/30 to-indigo-50/30">
    <!-- 文章头部 Hero -->
    <section class="relative overflow-hidden bg-gradient-to-r from-blue-600 to-indigo-700">
      <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.05\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-20"></div>

      <div class="relative max-w-5xl mx-auto px-4 py-20 sm:px-6 lg:px-8">
        <!-- 面包屑导航 -->
        <nav class="flex items-center space-x-2 text-sm text-white/80 mb-8">
          <a href="/" class="hover:text-white transition-colors">首页</a>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <a href="/news" class="hover:text-white transition-colors">资讯中心</a>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <span class="text-white">正文</span>
        </nav>

        <!-- 文章标题区域 -->
        <div class="space-y-6">
          <!-- 分类标签 -->
          <div class="flex items-center gap-3">
            <span class="inline-flex items-center rounded-full bg-white/20 px-4 py-2 text-sm font-medium text-white backdrop-blur-md">
              <span class="mr-2 text-lg">{currentCategory.icon}</span>
              {currentCategory.label}
            </span>
            {article.data.featured && (
              <span class="inline-flex items-center rounded-full bg-yellow-400/20 px-3 py-1 text-xs font-medium text-yellow-100 backdrop-blur-md">
                热门
              </span>
            )}
            {article.data.tags && article.data.tags.slice(0, 2).map(tag => (
              <span class="inline-flex items-center rounded-full bg-white/10 px-3 py-1 text-xs text-white/90 backdrop-blur-md">
                #{tag}
              </span>
            ))}
          </div>

          <!-- 标题 -->
          <h1 class="text-4xl lg:text-5xl font-bold text-white leading-tight">
            {article.data.title}
          </h1>

          <!-- 文章描述 -->
          <p class="text-xl text-blue-100 leading-relaxed">
            {article.data.description}
          </p>

          <!-- 文章元信息 -->
          <div class="flex flex-wrap items-center gap-6 text-sm text-white/80">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <time datetime={article.data.publishDate}>{formattedDate}</time>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>约 {readingTime} 分钟阅读</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
              <span>1.2k 阅读</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 主要内容区域 -->
    <section class="py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-3 gap-12">
          <!-- 左侧文章内容 -->
          <div class="lg:col-span-2">
            <!-- 文章封面图 -->
            {article.data.image && (
              <div class="mb-8 rounded-2xl overflow-hidden shadow-xl">
                <img
                  src={article.data.image}
                  alt={article.data.title}
                  class="w-full h-auto"
                />
              </div>
            )}

            <!-- 文章正文 -->
            <article class="bg-white rounded-2xl shadow-xl p-8 lg:p-12">
              <div class="prose prose-lg prose-indigo max-w-none">
                <Content />
              </div>

              <!-- 文章标签 -->
              {article.data.tags && article.data.tags.length > 0 && (
                <div class="mt-12 pt-8 border-t border-gray-200">
                  <div class="flex items-center gap-2 flex-wrap">
                    <span class="text-sm font-medium text-gray-700">标签：</span>
                    {article.data.tags.map(tag => (
                      <a
                        href={`/news?tag=${tag}`}
                        class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-indigo-100 hover:text-indigo-600 transition-colors"
                      >
                        #{tag}
                      </a>
                    ))}
                  </div>
                </div>
              )}

              <!-- 分享按钮 -->
              <div class="mt-8 pt-8 border-t border-gray-200">
                <div class="flex items-center justify-between">
                  <span class="text-sm font-medium text-gray-700">分享文章：</span>
                  <div class="flex gap-3">
                    <button class="p-2 bg-blue-100 text-blue-600 rounded-lg hover:bg-blue-200 transition-colors">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                      </svg>
                    </button>
                    <button class="p-2 bg-green-100 text-green-600 rounded-lg hover:bg-green-200 transition-colors">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
                      </svg>
                    </button>
                    <button class="p-2 bg-gray-100 text-gray-600 rounded-lg hover:bg-gray-200 transition-colors" onclick="navigator.clipboard.writeText(window.location.href); alert('链接已复制！')">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </article>

            <!-- 相关资讯 -->
            {relatedNews.length > 0 && (
              <div class="mt-12 bg-white rounded-2xl shadow-xl p-8">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">相关资讯</h2>
                <div class="grid md:grid-cols-2 gap-6">
                  {relatedNews.map(news => (
                    <a
                      href={`/news/${news.slug}`}
                      class="group block p-4 rounded-xl border border-gray-200 hover:border-indigo-300 hover:shadow-lg transition-all"
                    >
                      {news.data.image && (
                        <img
                          src={news.data.image}
                          alt={news.data.title}
                          class="w-full h-40 object-cover rounded-lg mb-4"
                        />
                      )}
                      <h3 class="font-bold text-gray-900 group-hover:text-indigo-600 transition-colors line-clamp-2 mb-2">
                        {news.data.title}
                      </h3>
                      <p class="text-sm text-gray-600 line-clamp-2 mb-3">
                        {news.data.description}
                      </p>
                      <div class="flex items-center justify-between text-xs text-gray-500">
                        <time>{new Date(news.data.publishDate).toLocaleDateString('zh-CN')}</time>
                        <span class="text-indigo-600">阅读更多 →</span>
                      </div>
                    </a>
                  ))}
                </div>
              </div>
            )}

            <!-- 评论区 -->
            <div class="mt-12">
              <GiscusComments title="发表评论" showInstructions={true} />
            </div>
          </div>

          <!-- 右侧边栏 -->
          <div class="space-y-8">
            <!-- 快速导航（目录） -->
            <div class="bg-white rounded-2xl shadow-lg p-6 sticky top-20">
              <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                <svg class="w-5 h-5 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
                文章目录
              </h3>
              <nav id="toc" class="space-y-2 text-sm">
                <!-- 目录将通过JavaScript动态生成 -->
                <div class="text-gray-500 text-xs">目录加载中...</div>
              </nav>
            </div>

            <!-- 最新快讯 -->
            <div class="bg-white rounded-2xl shadow-lg p-6">
              <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                <svg class="w-5 h-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                </svg>
                最新快讯
              </h3>

              <div class="space-y-3">
                <div class="pb-3 border-b border-gray-100">
                  <time class="text-xs text-gray-500">2小时前</time>
                  <p class="text-sm text-gray-700 mt-1">欧盟MiCA法规正式实施，加密货币监管进入新阶段</p>
                </div>
                <div class="pb-3 border-b border-gray-100">
                  <time class="text-xs text-gray-500">5小时前</time>
                  <p class="text-sm text-gray-700 mt-1">Visa宣布扩大加密货币卡合作伙伴计划</p>
                </div>
                <div class="pb-3 border-b border-gray-100">
                  <time class="text-xs text-gray-500">8小时前</time>
                  <p class="text-sm text-gray-700 mt-1">币安推出新一代虚拟卡产品，支持更多币种</p>
                </div>
              </div>

              <a href="/news" class="block mt-4 text-center text-sm text-indigo-600 hover:text-indigo-700">
                查看更多快讯 →
              </a>
            </div>

            <!-- 热门文章 -->
            {hotArticles.length > 0 && (
              <div class="bg-white rounded-2xl shadow-lg p-6">
                <h3 class="text-lg font-bold text-gray-900 mb-4">热门文章</h3>
                <div class="space-y-3">
                  {hotArticles.map((hot, index) => (
                    <a
                      href={`/articles/${hot.slug}`}
                      class="flex items-start gap-3 group"
                    >
                      <span class={`flex-shrink-0 w-7 h-7 rounded-lg flex items-center justify-center text-xs font-bold ${
                        index === 0 ? 'bg-gradient-to-br from-red-500 to-orange-500 text-white' :
                        index === 1 ? 'bg-gradient-to-br from-orange-400 to-yellow-500 text-white' :
                        index === 2 ? 'bg-gradient-to-br from-yellow-400 to-green-500 text-white' :
                        'bg-gray-100 text-gray-600'
                      }`}>
                        {index + 1}
                      </span>
                      <div class="flex-1">
                        <h4 class="text-sm font-medium text-gray-700 group-hover:text-indigo-600 transition-colors line-clamp-2">
                          {hot.data.title}
                        </h4>
                        <div class="flex items-center gap-2 mt-1">
                          <span class="text-xs text-gray-500">
                            {CARD_CATEGORIES[hot.data.category.toUpperCase()]?.label || hot.data.category}
                          </span>
                          <span class="text-xs text-gray-400">•</span>
                          <span class="text-xs text-gray-500">
                            {new Date(hot.data.publishDate).toLocaleDateString('zh-CN')}
                          </span>
                        </div>
                      </div>
                    </a>
                  ))}
                </div>
              </div>
            )}

            <!-- 订阅提醒 -->
            <div class="bg-gradient-to-br from-indigo-600 to-purple-600 rounded-2xl shadow-lg p-6 text-white">
              <h3 class="text-lg font-bold mb-2">订阅资讯</h3>
              <p class="text-sm text-indigo-100 mb-4">
                第一时间获取行业最新动态
              </p>
              <form class="space-y-3">
                <input
                  type="email"
                  placeholder="输入您的邮箱"
                  class="w-full px-4 py-2.5 bg-white/20 backdrop-blur-sm rounded-lg placeholder-indigo-200 text-white border border-white/20 focus:outline-none focus:border-white/50"
                />
                <button
                  type="submit"
                  class="w-full py-2.5 bg-white text-indigo-600 rounded-lg font-medium hover:bg-gray-100 transition-colors"
                >
                  立即订阅
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <!-- 生成目录的JavaScript -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // 获取文章内容中的所有标题
      const article = document.querySelector('.prose');
      const toc = document.getElementById('toc');

      if (article && toc) {
        const headings = article.querySelectorAll('h2, h3');

        if (headings.length > 0) {
          const tocHTML = Array.from(headings).map((heading, index) => {
            // 为标题添加ID以便跳转
            const id = `heading-${index}`;
            heading.id = id;

            const level = heading.tagName.toLowerCase();
            const paddingLeft = level === 'h3' ? 'pl-4' : '';

            return `
              <a
                href="#${id}"
                class="block py-1.5 ${paddingLeft} text-gray-600 hover:text-indigo-600 transition-colors border-l-2 border-transparent hover:border-indigo-600 -ml-px pl-4"
              >
                ${heading.textContent}
              </a>
            `;
          }).join('');

          toc.innerHTML = tocHTML;
        } else {
          toc.innerHTML = '<div class="text-gray-500 text-xs">暂无目录</div>';
        }
      }

      // 平滑滚动
      document.querySelectorAll('#toc a').forEach(link => {
        link.addEventListener('click', (e) => {
          e.preventDefault();
          const targetId = link.getAttribute('href').substring(1);
          const targetElement = document.getElementById(targetId);
          if (targetElement) {
            targetElement.scrollIntoView({ behavior: 'smooth', block: 'center' });
          }
        });
      });
    });
  </script>
</Layout>