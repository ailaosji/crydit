---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { ExternalLink, CheckCircle } from 'lucide-react';

// 获取所有银行数据
const banks = await getCollection('banks');

// 银行奖励配置
const bankRewards: Record<string, string> = {
  'iFast Global Bank': '存500英镑3个月，送5英镑',
  'Revolut': '新用户注册送10欧元',
  'Wise (TransferWise)': '首笔转账免手续费',
  'WeLab Bank（汇立银行）': '存$10,000港币30天，送$200港币',
  'Remitly': '首笔$50+汇款立减$25',
  '澳门蚂蚁银行': '转入1万港币，送2股阿里巴巴+58港币股票卡'
};
---

<Layout title="推荐海外银行 | U卡评测网" description="为您的数字货币提供便捷的出入金通道，精选优质海外银行账户">
  <div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-indigo-50">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-indigo-50 via-purple-50 to-white overflow-hidden pt-8 pb-16">
      <!-- 背景装饰 -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute -top-40 -right-40 w-96 h-96 bg-gradient-to-br from-indigo-200/30 to-purple-200/30 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-gradient-to-tr from-blue-200/30 to-indigo-200/30 rounded-full blur-3xl"></div>
      </div>

      <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
        <!-- 面包屑 -->
        <nav class="flex items-center gap-2 text-sm text-gray-600 mb-8">
          <a href="/" class="hover:text-indigo-600 transition-colors">首页</a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
          <span class="text-gray-900 font-medium">推荐银行</span>
        </nav>

        <!-- 页面标题 -->
        <div class="text-center mb-12">
          <!-- 标签 -->
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-blue-100 to-indigo-100 rounded-full mb-4">
            <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z"/>
              <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd"/>
            </svg>
            <span class="text-sm font-bold text-blue-700">出入金通道</span>
          </div>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-gray-900 mb-6 leading-tight">
            推荐<span class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 bg-clip-text text-transparent">海外银行</span>
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            为您的加密货币提供便捷出入金通道，精选优质海外银行账户
          </p>

          <!-- 统计数据 -->
          <div class="flex items-center justify-center gap-8 mt-8 text-sm text-gray-600">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span class="font-medium">官方持牌</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.51-1.31c-.562-.649-1.413-1.076-2.353-1.253V5z" clip-rule="evenodd"/>
              </svg>
              <span class="font-medium">限时优惠</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-purple-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
              </svg>
              <span class="font-medium">安全可靠</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 银行列表 -->
    <section class="py-16 px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {banks.map((bank) => {
            const reward = bankRewards[bank.data.name];
            const isImageLogo = bank.data.logo && bank.data.logo.startsWith('http');

            return (
              <a
                href={`/banks/${bank.slug}`}
                class="group relative block overflow-hidden rounded-2xl bg-white p-6 shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl"
              >
                {/* 标签 */}
                {bank.data.highlight && (
                  <div class={`absolute right-3 top-3 rounded-full ${bank.data.highlightColor} px-3 py-1 text-xs font-semibold text-white`}>
                    {bank.data.highlight}
                  </div>
                )}

                {/* Logo和标题 */}
                <div class="mb-4 flex items-center space-x-3">
                  <div class="flex h-14 w-14 flex-shrink-0 items-center justify-center rounded-xl bg-gradient-to-br from-gray-50 to-gray-100 overflow-hidden">
                    {isImageLogo ? (
                      <img
                        src={bank.data.logo}
                        alt={bank.data.name}
                        class="h-12 w-12 object-contain rounded-lg"
                      />
                    ) : (
                      <span class="text-3xl">{bank.data.logo}</span>
                    )}
                  </div>
                  <div class="min-w-0 flex-1">
                    <h3 class="truncate text-lg font-bold text-gray-900 transition-colors group-hover:text-indigo-600">
                      {bank.data.name}
                    </h3>
                  </div>
                </div>

                {/* 描述 */}
                <p class="mb-4 text-sm text-gray-600 line-clamp-3">
                  {bank.data.description}
                </p>

                {/* 奖励优惠 */}
                {reward && (
                  <div class="mb-4 relative overflow-hidden rounded-lg border-2 border-dashed border-orange-300 bg-gradient-to-r from-orange-50 to-red-50 px-3 py-2.5 flex items-center justify-between">
                    <span class="text-sm font-bold text-orange-700 flex-1">{reward}</span>
                    <div class="flex-shrink-0 ml-2 bg-gradient-to-r from-orange-500 to-red-500 text-white rounded-full p-1">
                      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </div>
                    <div class="absolute left-0 top-1/2 h-2.5 w-2.5 -translate-x-1/2 -translate-y-1/2 rounded-full bg-white"></div>
                  </div>
                )}

                {/* 特色功能 */}
                <div class="flex flex-wrap gap-2 mb-3">
                  {bank.data.features.slice(0, 3).map((feature: string) => (
                    <span class="inline-flex items-center rounded-lg bg-gray-50 px-2.5 py-1 text-xs text-gray-700">
                      <svg class="w-3 h-3 mr-1 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                      </svg>
                      {feature}
                    </span>
                  ))}
                </div>

                {/* 查看详情按钮 */}
                <div class="flex items-center justify-between pt-3 border-t border-gray-100">
                  <span class="text-sm font-semibold text-indigo-600 group-hover:text-indigo-700">
                    查看详情
                  </span>
                  <svg class="w-5 h-5 text-indigo-600 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>

                {/* 悬停背景效果 */}
                <div class="absolute -right-8 -top-8 h-24 w-24 rounded-full bg-gradient-to-br from-indigo-100 to-purple-100 opacity-0 blur-2xl transition-opacity duration-300 group-hover:opacity-100" />
              </a>
            );
          })}
        </div>
      </div>
    </section>

    <!-- 底部信息栏 -->
    <section class="py-12 bg-gradient-to-r from-indigo-600 to-purple-600">
      <div class="max-w-7xl mx-auto px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          开始您的数字货币之旅
        </h2>
        <p class="text-xl text-white/90 mb-8">
          选择合适的银行账户，让加密资产流通更便捷
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/cards" class="inline-flex items-center justify-center px-8 py-3 bg-white text-indigo-600 font-semibold rounded-full hover:bg-gray-100 transition-colors">
            浏览U卡
          </a>
          <a href="/articles" class="inline-flex items-center justify-center px-8 py-3 border border-white/30 text-white font-semibold rounded-full hover:bg-white/10 transition-colors">
            阅读指南
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>
