---
// 获取当前路径用于高亮导航
const currentPath = Astro.url.pathname
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center space-x-2">
        <a href="/" class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
            </svg>
          </div>
          <span class="text-xl font-bold text-gray-900">U卡评测</span>
        </a>
      </div>

      <!-- 桌面端导航菜单 -->
      <div class="hidden md:flex items-center space-x-8">
        <a 
          href="/" 
          class={`font-medium transition-colors ${
            currentPath === '/' 
              ? 'text-blue-600' 
              : 'text-gray-700 hover:text-blue-600'
          }`}
        >
          首页
        </a>
        <a 
          href="/news" 
          class={`font-medium transition-colors ${
            currentPath.startsWith('/news') 
              ? 'text-blue-600' 
              : 'text-gray-700 hover:text-blue-600'
          }`}
        >
          资讯
        </a>
        <a 
          href="/cards" 
          class={`font-medium transition-colors ${
            currentPath.startsWith('/cards') 
              ? 'text-blue-600' 
              : 'text-gray-700 hover:text-blue-600'
          }`}
        >
          U卡对比
        </a>
        <a 
          href="/about" 
          class={`font-medium transition-colors ${
            currentPath === '/about' 
              ? 'text-blue-600' 
              : 'text-gray-700 hover:text-blue-600'
          }`}
        >
          关于我们
        </a>
      </div>

      <!-- 搜索框 -->
      <div class="hidden lg:flex items-center">
        <div class="relative">
          <input
            type="text"
            id="searchInput"
            placeholder="搜索卡片或资讯..."
            class="w-64 pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          />
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- 移动端菜单按钮 -->
      <div class="md:hidden">
        <button
          id="mobileMenuButton"
          class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500"
          aria-expanded="false"
        >
          <span class="sr-only">打开主菜单</span>
          <!-- 汉堡菜单图标 -->
          <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <!-- 关闭图标 (隐藏状态) -->
          <svg class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- 移动端菜单 -->
    <div id="mobileMenu" class="md:hidden hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t border-gray-200 mt-4">
        <a 
          href="/" 
          class={`block px-3 py-2 rounded-md text-base font-medium ${
            currentPath === '/' 
              ? 'text-blue-600 bg-blue-50' 
              : 'text-gray-700 hover:text-blue-600 hover:bg-gray-50'
          }`}
        >
          首页
        </a>
        <a 
          href="/news" 
          class={`block px-3 py-2 rounded-md text-base font-medium ${
            currentPath.startsWith('/news') 
              ? 'text-blue-600 bg-blue-50' 
              : 'text-gray-700 hover:text-blue-600 hover:bg-gray-50'
          }`}
        >
          资讯
        </a>
        <a 
          href="/cards" 
          class={`block px-3 py-2 rounded-md text-base font-medium ${
            currentPath.startsWith('/cards') 
              ? 'text-blue-600 bg-blue-50' 
              : 'text-gray-700 hover:text-blue-600 hover:bg-gray-50'
          }`}
        >
          U卡对比
        </a>
        <a 
          href="/about" 
          class={`block px-3 py-2 rounded-md text-base font-medium ${
            currentPath === '/about' 
              ? 'text-blue-600 bg-blue-50' 
              : 'text-gray-700 hover:text-blue-600 hover:bg-gray-50'
          }`}
        >
          关于我们
        </a>
        
        <!-- 移动端搜索 -->
        <div class="px-3 py-2">
          <div class="relative">
            <input
              type="text"
              placeholder="搜索卡片或资讯..."
              class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  // 移动端菜单切换
  const mobileMenuButton = document.getElementById('mobileMenuButton');
  const mobileMenu = document.getElementById('mobileMenu');
  const menuIcons = mobileMenuButton.querySelectorAll('svg');

  mobileMenuButton.addEventListener('click', () => {
    const isOpen = !mobileMenu.classList.contains('hidden');
    
    if (isOpen) {
      mobileMenu.classList.add('hidden');
      menuIcons[0].classList.remove('hidden');
      menuIcons[1].classList.add('hidden');
      mobileMenuButton.setAttribute('aria-expanded', 'false');
    } else {
      mobileMenu.classList.remove('hidden');
      menuIcons[0].classList.add('hidden');
      menuIcons[1].classList.remove('hidden');
      mobileMenuButton.setAttribute('aria-expanded', 'true');
    }
  });

  // 搜索功能 (基础版本)
  const searchInputs = document.querySelectorAll('input[type="text"][placeholder*="搜索"]');
  
  searchInputs.forEach(input => {
    input.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        const query = e.target.value.trim();
        if (query) {
          // 这里可以添加搜索逻辑，比如跳转到搜索结果页面
          window.location.href = `/search?q=${encodeURIComponent(query)}`;
        }
      }
    });
  });
</script>