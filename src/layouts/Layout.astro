            <a href="/contact" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition-colors font-medium">联系我们</a>
          </div>
          
          <!-- Mobile menu button -->
          <div class="md:hidden">
            <button type="button" class="text-gray-700 hover:text-indigo-600 focus:outline-none focus:text-indigo-600" id="mobile-menu-button">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>
      
      <!-- Mobile Navigation -->
      <div class="md:hidden border-t border-gray-200 bg-white/95 backdrop-blur-lg" id="mobile-menu" style="display: none;">
        <div class="px-6 py-4 space-y-3">
          <a href="/" class="block text-gray-700 hover:text-indigo-600 font-medium py-2 transition-colors">首页</a>
          <a href="/articles" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">最新资讯</a>
          <a href="/cards" class="block text-gray-700 hover:text-indigo-600 font-medium py-2 transition-colors">U卡评测</a>
          <a href="/exchanges" class="block text-gray-700 hover:text-indigo-600 font-medium py-2 transition-colors">交易所排行</a>
          <a href="/about" class="block text-gray-700 hover:text-indigo-600 font-medium py-2 transition-colors">关于我们</a>
          <a href="/contact" class="block bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition-colors font-medium text-center mt-4">联系我们</a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-16">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white">
