---
// src/layouts/Layout.astro
export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "专业的数字货币U卡评测社区，提供最新的U卡评测、交易所排行和行业资讯", image } = Astro.props;
